@model Client.Models.NewLaborScheduling.NewLaborSchedulingVM
<form>
    <nav class="sidebar" style="height: 550px;" id="sidebar2">
        <div class="dismiss" id="dismissAW">
            <i class="fa fa-close"></i>
        </div>
        <div class="sidebar-header">
            <h3><i class="fa fa-filter" style="position: relative; top: -2px;"></i> @Model.Loc.Where(a => a.ResourceId == "spnFilters").FirstOrDefault().Value.ToString() <span class="AWOfilteritemcount">0</span></h3>
            <button type="button" class="btn btn-blue filterSearch" id="btnAvailableLaborDataAdvSrch"><i class="fa fa-search" style="margin-top:-3px;"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "GlobalApply").FirstOrDefault().Value.ToString()</button>
        </div>
        <div class="sidebar-content" id="advsearchsidebarAvailableLabor">
            <div class="form-group">
                <label for="AWOWorkOrder">@Model.Loc.Where(a => a.ResourceId == "spnGlobalWorkOrderID").FirstOrDefault().Value.ToString() :</label>
                <input type="text" class="form-control search adv-item" id="AWOWorkOrder">
            </div>
            <div class="form-group">
                <label for="AWOChargeTo">@Model.Loc.Where(a => a.ResourceId == "GlobalChargeTo").FirstOrDefault().Value.ToString() :</label>
                <input type="text" class="form-control search adv-item" id="AWOChargeTo">
            </div>
            <div class="form-group">
                <label for="AWOChargeToName">@Model.Loc.Where(a => a.ResourceId == "spnChargeToName").FirstOrDefault().Value.ToString() :</label>
                <input type="text" class="form-control search adv-item" id="AWOChargeToName">
            </div>
            <div class="form-group">
                <label for="AWODescription">@Model.Loc.Where(a => a.ResourceId == "spnDescription").FirstOrDefault().Value.ToString() :</label>
                <input type="text" class="form-control search adv-item" id="AWODescription">
            </div>
            <div class="form-group">
                <label for="AWOStatus">@Model.Loc.Where(a => a.ResourceId == "spnStatus").FirstOrDefault().Value.ToString() :</label>
                @Html.DropDownListFor(m => m.availableWOModel.Status, Model.availableWOModel.StatusList, new { @class = "form-control search adv-item select2picker", @id = "AWOStatus", style = "width:100%;", multiple = "multiple" })

            </div>
            <div class="form-group">
                <label for="AWOPriority">@Model.Loc.Where(a => a.ResourceId == "spnPriority").FirstOrDefault().Value.ToString() :</label>
                @Html.DropDownListFor(m => m.availableWOModel.Priority, Model.availableWOModel.PriorityList, new { @class = "form-control search adv-item select2picker", style = "width:100%;", @id = "AWOPriority", multiple = "multiple" })

            </div>
            <div class="form-group">
                <label for="AWOWOType">@Model.Loc.Where(a => a.ResourceId == "GlobalType").FirstOrDefault().Value.ToString() :</label>
                @Html.DropDownListFor(m => m.availableWOModel.Type, Model.availableWOModel.TypeList, new { @class = "form-control search adv-item select2picker Select2-multiselect", style = "width:100%;", @id = "AWOWOType", multiple = "multiple" })

            </div>
            <div class="form-group">
                <label for="AWORequiredDate">@Model.Loc.Where(a => a.ResourceId == "spnRequiredDate").FirstOrDefault().Value.ToString() :</label>
                <input type="text" class="form-control search dtpicker adv-item" id="AWORequiredDate">
            </div>
            <div class="form-group">
                <label for="AWOAssigned">@Model.Loc.Where(a => a.ResourceId == "spnAssigned").FirstOrDefault().Value.ToString() :</label>
                @Html.DropDownListFor(m => m.availableWOModel.Assigned, Model.availableWOModel.PersonnelIdList, new { @class = "form-control search adv-item select2picker", @id = "AWOAssigned", style = "width:100%;", multiple = "multiple" })
            </div>
        </div>
    </nav>
</form>
<style type="text/css">
    .sidebar {
        height: 100vh !important;
        padding-bottom: 30px;
    }

    .overlay2 {
        height: 100% !important;
    }
</style>