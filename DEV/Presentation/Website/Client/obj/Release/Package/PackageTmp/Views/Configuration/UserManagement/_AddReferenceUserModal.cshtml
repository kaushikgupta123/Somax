@model Client.Models.Configuration.UserManagement.UserManagementVM

<div id="AddReferenceUserModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-info">
        @using (Ajax.BeginForm("AddReferenceUser", "UserManagement", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "AddReferenceUserOnSuccess", OnBegin = "AjaxBeginFormBegin", OnComplete = "AjaxBeginFormComplete", OnFailure = "AjaxBeginFormFaillure" }, new { id = "frmaddreferenceuser" }))
        {
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">@Model.Loc.Where(a => a.ResourceId == "AddReferenceUser").FirstOrDefault().Value.ToString()</h4>
                </div>
                @Html.Partial("_ErrorDiv")
                <div class="modal-body">
                    <div class="form-group">
                        <label>@Model.Loc.Where(a => a.ResourceId == "spnUserName").FirstOrDefault().Value.ToString() <small>*</small></label>
                        @Html.ValidationMessageFor(m => m.referenceUserModel.UserName, "", new { style = "display:none" })
                        @Html.TextBoxFor(m => m.referenceUserModel.UserName, new { @class = "form-control search", autocomplete = "off", maxlength = 63 })
                    </div>
                    <div class="form-group" style="margin-bottom:0;">
                        <label>@Model.Loc.Where(a => a.ResourceId == "FirstName").FirstOrDefault().Value.ToString() <small>*</small></label>
                        @Html.ValidationMessageFor(m => m.referenceUserModel.FirstName, "", new { style = "display:none" })
                        @Html.TextBoxFor(m => m.referenceUserModel.FirstName, new { @class = "form-control search", autocomplete = "off", maxlength = 63 })
                    </div>
                    <div class="form-group" style="margin-bottom:0;">
                        <label>@Model.Loc.Where(a => a.ResourceId == "MiddleName").FirstOrDefault().Value.ToString() <small></small></label>
                        @Html.ValidationMessageFor(m => m.referenceUserModel.MiddleName, "", new { style = "display:none" })
                        @Html.TextBoxFor(m => m.referenceUserModel.MiddleName, new { @class = "form-control search", autocomplete = "off", maxlength = 63 })
                    </div>
                    <div class="form-group" style="margin-bottom:0;">
                        <label>@Model.Loc.Where(a => a.ResourceId == "LastName").FirstOrDefault().Value.ToString() <small>*</small></label>
                        @Html.ValidationMessageFor(m => m.referenceUserModel.LastName, "", new { style = "display:none" })
                        @Html.TextBoxFor(m => m.referenceUserModel.LastName, new { @class = "form-control search", autocomplete = "off", maxlength = 63 })
                    </div>
                    <div class="form-group" style="margin-bottom:0;">
                        <label>@Model.Loc.Where(a => a.ResourceId == "Craft").FirstOrDefault().Value.ToString() <small></small></label>
                        @Html.DropDownListFor(m => m.referenceUserModel.CraftId, Model.referenceUserModel.LookupCraftList, "--Select--", new { @class = "form-control search select2picker", style = "width:100%;" })
                    </div>


                </div>
                <div class="modal-footer" style="padding:15px 25px !important;">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-close faIcon"></i> &nbsp;@Model.Loc.Where(a => a.ResourceId == "globalCancel").FirstOrDefault().Value.ToString() </button>
                    <button type="submit" class="btn btn-blue" style="float:right;" id="btnAddReferenceUser"><i class="fa fa-save faIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalSave").FirstOrDefault().Value.ToString() </button>
                    <div style="clear:both;"></div>
                </div>
            </div>
            @Html.HiddenFor(m => m.referenceUserModel.UserInfoId)
        }
    </div>
</div>

<style type="text/css">
    .errorClassUsr {
        border: 1px solid red !important;
    }
</style>