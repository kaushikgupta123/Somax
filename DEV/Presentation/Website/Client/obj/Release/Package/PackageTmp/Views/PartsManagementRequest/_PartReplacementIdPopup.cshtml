@model Client.Models.PartsManagement.PartsManagementRequest.PartsManagementRequestVM
<div id="partReplModal" class="modal fade dropdown-modal" role="dialog" style="display:none;z-index:9999;">
  <div class="modal-dialog partPopup">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title" id="hdrPopChildrenTitle">@Model.Loc.Where(a => a.ResourceId == "spnSelectPartID").FirstOrDefault().Value.ToString()</h4>
      </div>
      <div class="modal-body">
        <div id="tbldropdown" class="dropdown-content tbl-dropdown" style="display:block;">
          <div class="table-responsive dropTableOuter">
            <table id="TblReplParts" class="stripe dropTable globalDropTable" style="width:100%;">
              <thead>
                <tr>
                  <th>@Model.Loc.Where(a => a.ResourceId == "spnPartID").FirstOrDefault().Value.ToString()</th>
                  <th>@Model.Loc.Where(a => a.ResourceId == "spnCategoryDescription").FirstOrDefault().Value.ToString()</th>
                </tr>
              </thead>
              <tfoot id="tblpartreplfooter" style="display:none">
                <tr>
                  <th style="position:relative;">@Model.Loc.Where(a => a.ResourceId == "spnPartID").FirstOrDefault().Value.ToString()</th>
                  <th style="position:relative;">@Model.Loc.Where(a => a.ResourceId == "spnCategoryDescription").FirstOrDefault().Value.ToString()</th>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>
      <div class="modal-footer" style="padding:15px 25px !important;">
        <div style="clear:both;"></div>
      </div>
    </div>
  </div>
</div>
<style type="text/css">
  table.dataTable.dropTable tbody td {
    padding: 7px;
  }
</style>