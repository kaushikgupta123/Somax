@model Client.Models.PurchaseOrder.PurchaseOrderVM
@{
    Layout = null;
}
<table id="" dt-options="dtOptions" class="purchaseOrderinnerDataTable childtable cell-border" style="width:100%">
    <thead>
        <tr>
            <th style="width:8%">@Model.Loc.Where(a => a.ResourceId == "spnPoLineNo").FirstOrDefault().Value.ToString()</th>
            <th style="width:10%">@Model.Loc.Where(a => a.ResourceId == "spnPoPartID").FirstOrDefault().Value.ToString()</th>
            <th style="width:14%">@Model.Loc.Where(a => a.ResourceId == "spnDescription").FirstOrDefault().Value.ToString()</th>
            <th style="text-align: right !important; width: 10%">@Model.Loc.Where(a => a.ResourceId == "spnPoOrderQty").FirstOrDefault().Value.ToString()</th>
            <th style="width:10%">@Model.Loc.Where(a => a.ResourceId == "spnPdUOM").FirstOrDefault().Value.ToString()</th>
            <th style="text-align: right !important; width: 10%;">@Model.Loc.Where(a => a.ResourceId == "spnUnitCost").FirstOrDefault().Value.ToString()</th>
            <th style="text-align:right !important;width:10%;">@Model.Loc.Where(a => a.ResourceId == "spnPoTotalCost").FirstOrDefault().Value.ToString()</th>
            <th style="width:8%">@Model.Loc.Where(a => a.ResourceId == "spnPoStatus").FirstOrDefault().Value.ToString()</th>
            <th style="width:10%">@Model.Loc.Where(a => a.ResourceId == "spnPoAccount").FirstOrDefault().Value.ToString()</th>
            <th style="width:10%">@Model.Loc.Where(a => a.ResourceId == "GlobalChargeTo").FirstOrDefault().Value.ToString()</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.POLineItemList.Count > 0)
        {
            foreach (var pro in Model.POLineItemList)
            {
                <tr>
                    <td style="width:8%">@pro.LineNumber</td>
                    <td style="width:10%">@pro.PartClientLookupId</td>
                    <td style="width:14%">@pro.Description </td>
                    <td style="width:10%">@pro.OrderQuantity</td>
                    <td style="width:10%">@pro.PurchaseUOM</td>
                    <td style="width:10%">@pro.UnitCost</td>
                    <td style="width:10%">@pro.TotalCost</td>
                    <td style="width:8%">@pro.Status_Display</td>
                    <td style="width:10%">@pro.AccountClientLookupId</td>
                    <td style="width:10%">@pro.ChargeToClientLookupId</td>
                </tr>
            }
        }
    </tbody>
    <tfoot style="width:100%">
        <tr>
            <th style="width:8%"></th>
            <th style="width:10%"></th>
            <th style="width:14%"></th>
            <th style="width:10%"></th>
            <th style="width:10%"></th>
            <th style="width:10%"></th>
            <th style="text-align: right !important; width: 10%;font-weight: 500 !important; background: #b3b1b7 !important;"></th>
            <th style="width:8%"></th>
            <th style="width:10%"></th>
            <th style="width:10%"></th>
        </tr>
    </tfoot>
</table>
<style type="text/css">
    .childtable tr th {
        background: #4da5fe;
        color: #fff !important;
        white-space: nowrap !important;
        text-align: center !important;
        font-weight: 400 !important;
    }

    .link {
        color: #235ddd;
    }

        .link:hover {
            color: #32bf0e;
        }

    .nolink {
        pointer-events: none;
        color: #91a0a0;
    }

    table.dataTable thead .sorting {
        padding-right: 15px;
    }

    table.dataTable thead .sorting_asc {
        padding-right: 15px;
    }

    table.dataTable.display tbody tr:first-child td {
        width: 1%;
    }
</style>

