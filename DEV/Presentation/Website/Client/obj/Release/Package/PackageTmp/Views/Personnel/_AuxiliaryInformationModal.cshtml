@model Client.Models.PersonnelVM

<div id="AuxiliaryInformationModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-info">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Model.Loc.Where(a => a.ResourceId == "spnAuxiliaryInformation").FirstOrDefault().Value.ToString()</h4>
            </div>
            @using (Ajax.BeginForm("UpdateAuxiliaryInformation", "Personnel", new AjaxOptions { HttpMethod = "Post", OnSuccess = "AuxiliaryInformationUpdateOnSuccess", OnBegin = "AjaxBeginFormBegin", OnComplete = "AjaxBeginFormComplete", OnFailure = "AjaxBeginFormFaillure" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="form-group">
                        <label for="Line" id="lblLine">@Model.Loc.Where(a => a.ResourceId == "globalStartDate").FirstOrDefault().Value.ToString():</label>
                        @Html.ValidationMessageFor(m => m.auxiliaryInformation.StartDate, "", new { style = "display:none" })
                        @Html.TextBoxFor(m => m.auxiliaryInformation.StartDate, "{0:MM/dd/yyyy}", new { @class = "form-control search dtpicker", autocomplete = "off", id = "StartDate" })
                    </div>
                    <div class="form-group">
                        <label for="Line" id="lblLine">@Model.Loc.Where(a => a.ResourceId == "spnLastSalaryReview").FirstOrDefault().Value.ToString():</label>
                        @Html.ValidationMessageFor(m => m.auxiliaryInformation.LastSalaryReview, "", new { style = "display:none" })
                        @Html.TextBoxFor(m => m.auxiliaryInformation.LastSalaryReview, "{0:MM/dd/yyyy}", new { @class = "form-control search dtpicker", autocomplete = "off", id = "LastSalaryReview" })
                    </div>
                    <div class="form-group">
                        <label for="Line" id="lblLine">@Model.Loc.Where(a => a.ResourceId == "spnInitialPay").FirstOrDefault().Value.ToString():</label>
                        @Html.ValidationMessageFor(m => m.auxiliaryInformation.InitialPay, "", new { style = "display:none" })
                        @Html.TextBoxFor(m => m.auxiliaryInformation.InitialPay, new { @class = "form-control search decimalinput", autocomplete = "off" })
                    </div>
                    <div class="form-group">
                        <label for="Line" id="lblLine">@Model.Loc.Where(a => a.ResourceId == "spnPresentPay").FirstOrDefault().Value.ToString():</label>
                        @Html.ValidationMessageFor(m => m.auxiliaryInformation.BasePay, "", new { style = "display:none" })
                        @Html.TextBoxFor(m => m.auxiliaryInformation.BasePay, new { @class = "form-control search decimalinput", autocomplete = "off" })
                    </div>
                </div>
                <div class="modal-footer" style="padding:15px 25px !important;">
                    <button type="button" class="btn btn-default mobBttn" data-dismiss="modal"><i class="fa fa-close buttonIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalCancel").FirstOrDefault().Value.ToString()</button>
                    <button type="submit" class="btn btn-blue mobBttn" style="float:right;"><i class="fa fa-save faIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalSave").FirstOrDefault().Value.ToString()</button>
                    <div style="clear:both;"></div>
                </div>
                @Html.HiddenFor(x => x.auxiliaryInformation.PersonnelId, new { id = "hiddenPersonnelId" })
            }
            @Html.TextBoxFor(m => m.auxiliaryInformation.StartDate, "{0:MM/dd/yyyy}", new {@name= "hiddenstrdate", id = "hiddenstrdate", @type = "hidden" })
            @Html.TextBoxFor(m => m.auxiliaryInformation.LastSalaryReview, "{0:MM/dd/yyyy}", new { @name = "hiddenLastSalaryReview", id = "hiddenLastSalaryReview", @type = "hidden" })
            @Html.HiddenFor(m => m.auxiliaryInformation.InitialPay, new { @name = "hiddenInitialPay", id = "hiddenInitialPay" })
            @Html.HiddenFor(m => m.auxiliaryInformation.BasePay, new { @name = "hiddenBasePay", id = "hiddenBasePay" })
        </div>
    </div>
</div>

