@model Client.Models.MultiStoreroomPart.MultiStoreroomPartVM

<nav class="sidebar">
    <div class="dismiss">
        <i class="fa fa-close"></i>
    </div>

    <div class="sidebar-header">
        <h3><i class="fa fa-filter" style="position: relative; top: -2px;"></i> @Model.Loc.Where(a => a.ResourceId == "spnFilters").FirstOrDefault().Value.ToString() <span class="receiptfilteritemcount">0</span></h3>
        <button type="button" id="btnMSPReceiptDataAdvSrch" class="btn btn-blue filterSearch">@Model.Loc.Where(a => a.ResourceId == "globalSearch").FirstOrDefault().Value.ToString() </button>
    </div>

    <div class="sidebar-content" id="mspreceiptgridadvsearchsidebar">
        <form action="#" method="post">
            <div class="form-group">
                <label for="mspPurchaseOrder">@Model.Loc.Where(a => a.ResourceId == "spnPurchaseOrder").FirstOrDefault().Value.ToString() :</label>
                <input type="text" class="form-control search adv-item" autocomplete="off" id="mspPurchaseOrder">
            </div>
            <div class="form-group">
                <label for="mspReceiptDate">@Model.Loc.Where(a => a.ResourceId == "spnReceiptDate").FirstOrDefault().Value.ToString() :</label>
                <input type="text" class="form-control search adv-item dtpicker" autocomplete="off" id="mspReceiptDate">
            </div>
            <div class="form-group">
                <label for="msprgridReceiptadvsearchVendorClientLookupId">@Model.Loc.Where(a => a.ResourceId == "spnVendor").FirstOrDefault().Value.ToString() :</label>
                <select id="msprgridReceiptadvsearchVendorClientLookupId" style="width:100%;" class="form-control search adv-item select2picker"></select>
            </div>
            <div class="form-group">
                <label for="mspVendorName">@Model.Loc.Where(a => a.ResourceId == "spnVendorName").FirstOrDefault().Value.ToString() :</label>
                <input type="text" class="form-control search adv-item" autocomplete="off" id="mspVendorName">
            </div>
            <div class="form-group">
                <label for="mspQuantity"> @Model.Loc.Where(a => a.ResourceId == "spnQuantity").FirstOrDefault().Value.ToString() :</label>
                <input type="text" class="form-control search longinput adv-item" autocomplete="off" id="mspQuantity">
            </div>
            <div class="form-group">
                <label for="mspUnitCost">@Model.Loc.Where(a => a.ResourceId == "spnUnitCost").FirstOrDefault().Value.ToString() :</label>
                <input type="text" class="form-control search decimalinput adv-item" autocomplete="off" id="mspUnitCost">
            </div>
        </form>
    </div>
</nav>


