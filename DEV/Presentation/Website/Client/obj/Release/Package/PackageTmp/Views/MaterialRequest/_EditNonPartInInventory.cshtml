                                    @Html.ValidationMessageFor(m => m.PartNotInInventoryModel.Description, "", new { style = "display:none" })
                                    @Html.TextBoxFor(m => m.PartNotInInventoryModel.Description, new { @class = "form-control search", autocomplete = "off" })
