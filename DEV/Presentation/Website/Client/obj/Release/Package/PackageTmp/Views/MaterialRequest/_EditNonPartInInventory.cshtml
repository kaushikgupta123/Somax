                            </li>
                            <li style="margin-bottom:4px;">
                                <span class="label">
                                    @Html.LabelFor(m => m.PartNotInInventoryModel.UnitCost) :<small>
                                        @(Model.PartNotInInventoryModel.IsAddPartNotInInventoryForm == true ? "*" : "")
