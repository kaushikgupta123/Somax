@model Client.Models.EquipmentCombined
<nav id="sidebar">
    <div id="dismiss">
        <i class="fa fa-close"></i>
    </div>
    <div class="sidebar-header">
        <h3><i class="fa fa-filter" style="position: relative; top: -2px;"></i>&nbsp; @Model.Loc.Where(a => a.ResourceId == "globalFilter").FirstOrDefault().Value.ToString() <span id="spnControlCounter">0</span></h3>
        <button type="button" class="btn btn-blue filterSearch" id="btnEqpDataAdvSrch"> @Model.Loc.Where(a => a.ResourceId == "GlobalApply").FirstOrDefault().Value.ToString()</button>
    </div>
    <div class="sidebar-content" id="advsearchsidebar">
        <form action="#" method="post">
            <div class="form-group">
                <label for="EquipmentID" id="lblEquipmentID" name="EquipmentID">@Model.Loc.Where(a => a.ResourceId == "spnGlobalEquipmentId").FirstOrDefault().Value.ToString() </label>
                <input type="text" class="form-control search adv-item" id="EquipmentID" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="Name" id="lblName">@Model.Loc.Where(a => a.ResourceId == "spnName").FirstOrDefault().Value.ToString() </label>
                <input type="text" class="form-control search adv-item" id="Name" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="Location" id="lblLocation">@Model.Loc.Where(a => a.ResourceId == "spnLocation").FirstOrDefault().Value.ToString() </label>
                <input type="text" class="form-control search adv-item" id="Location" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="AssetGroup1Id" id="lblAssetGroup1">@Model.EquipModel.AssetGroup1Name</label>
                @Html.DropDownListFor(m => m.EquipModel.AssetGroup1Id, Model.EquipModel.AssetGroup1List, "--Select--", new { @class = "form-control search adv-item select2picker", style = "width:100%;", id = "AssetGroup1Id" })
            </div>
            <div class="form-group">
                <label for="AssetGroup2Id" id="lblAssetGroup2">@Model.EquipModel.AssetGroup2Name</label>
                @Html.DropDownListFor(m => m.EquipModel.AssetGroup2Id, Model.EquipModel.AssetGroup2List, "--Select--", new { @class = "form-control search adv-item select2picker", style = "width:100%;", id = "AssetGroup2Id" })
            </div>
            <div class="form-group">
                <label for="AssetGroup3Id" id="lblAssetGroup3">@Model.EquipModel.AssetGroup3Name</label>
                @Html.DropDownListFor(m => m.EquipModel.AssetGroup3Id, Model.EquipModel.AssetGroup3List, "--Select--", new { @class = "form-control search adv-item select2picker", style = "width:100%;", id = "AssetGroup3Id" })
            </div>          
            <div class="form-group">
                <label for="SerialNumber" id="lblSerialNumber">@Model.Loc.Where(a => a.ResourceId == "spnSerialNo").FirstOrDefault().Value.ToString() </label>
                <input type="text" class="form-control search adv-item" id="SerialNumber" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="ddlType" id="lblType">@Model.Loc.Where(a => a.ResourceId == "GlobalType").FirstOrDefault().Value.ToString() </label>
                @Html.DropDownListFor(m => m.EquipModel.Type, Model.LookupTypeList, "--Select--", new { @class = "form-control search adv-item select2picker", style = "width:100%;", id = "ddlType" })
            </div>
            <div class="form-group">
                <label for="Make" id="lblMake">@Model.Loc.Where(a => a.ResourceId == "spnMake").FirstOrDefault().Value.ToString() </label>
                <input type="text" class="form-control search adv-item" id="Make" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="ModelNumber" id="lblModel">@Model.Loc.Where(a => a.ResourceId == "spnModelNo").FirstOrDefault().Value.ToString() </label>
                <input type="text" class="form-control search adv-item" id="ModelNumber" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="AccountSearchId" id="lblAccount">@Model.Loc.Where(a => a.ResourceId == "spnAccount").FirstOrDefault().Value.ToString() </label>
                <input type="text" class="form-control search adv-item" id="AccountSearch" autocomplete="off" style="color:#333; display:none">
                @Html.DropDownListFor(m => m.EquipModel.Account, Model.EquipModel.AccountList, "--Select--", new { @class = "form-control search adv-item select2picker", style = "width:100%;", id = "AccountSearchId" })
            </div>
            <div class="form-group">
                <label for="AssetsNumber" id="lblAsset">@Model.Loc.Where(a => a.ResourceId == "spnAssetNo").FirstOrDefault().Value.ToString() </label>
                <input type="text" class="form-control search adv-item" id="AssetsNumber" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="ddlassetAvailability" id="lblAssetAvailability">@Model.Loc.Where(a => a.ResourceId == "spnAvailability").FirstOrDefault().Value.ToString()  </label>
                @Html.DropDownListFor(m => m.EquipModel.AssetAvailability, Model.LookupAssetAvailability, "--Select--", new { @class = "form-control search adv-item select2picker", style = "width:100%;", id = "ddlassetAvailability" })
            </div>
        </form>
    </div>
</nav>
