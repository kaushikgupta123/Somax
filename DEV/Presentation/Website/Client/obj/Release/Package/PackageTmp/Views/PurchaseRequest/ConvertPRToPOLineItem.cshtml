@model Client.Models.PurchaseRequest.PurchaseRequestVM
@{
    Layout = null;
}
<table id="" dt-options="dtOptions" class="PRToPO childtable cell-border" style="width:100%">
    <thead>
        <tr>
            <th>@Model.Loc.Where(a => a.ResourceId == "spnPdLineNo").FirstOrDefault().Value.ToString()</th>
            <th>@Model.Loc.Where(a => a.ResourceId == "spnPartID").FirstOrDefault().Value.ToString()</th>
            <th>@Model.Loc.Where(a => a.ResourceId == "spnDescription").FirstOrDefault().Value.ToString()</th>
            <th>@Model.Loc.Where(a => a.ResourceId == "spnPdQuantity").FirstOrDefault().Value.ToString()</th>
            <th>@Model.Loc.Where(a => a.ResourceId == "spnPdUOM").FirstOrDefault().Value.ToString()</th>
            <th>@Model.Loc.Where(a => a.ResourceId == "spnUnitCost").FirstOrDefault().Value.ToString()</th>
            <th>@Model.Loc.Where(a => a.ResourceId == "spnPdTotalCost").FirstOrDefault().Value.ToString()</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.listLineItem.Count > 0)
        {
            foreach (var pro in Model.listLineItem)
            {
                <tr>
                    <td>@pro.LineNumber</td>
                    <td>@pro.PartClientLookupId</td>
                    <td>@pro.Description</td>
                    <td>@Math.Round(Convert.ToDouble(pro.OrderQuantity), 2)</td>
                    <td>@pro.PurchaseUOM</td>
                    <td>@Math.Round(pro.UnitCost, 2)</td>
                    <td>@Math.Round(pro.TotalCost, 2)</td>
                </tr>
            }
        }
    </tbody>
</table>
<style type="text/css">
    .childtable tr th { background: #4da5fe; color: #fff !important; white-space: nowrap !important; text-align: center !important; font-weight: 400 !important; }
    .link { color: #235ddd; }
    .link:hover { color: #32bf0e; }
    .nolink { pointer-events: none; color: #91a0a0; }
    #ConvertPRToPOTable .dataTables_info { display: none; }
</style>