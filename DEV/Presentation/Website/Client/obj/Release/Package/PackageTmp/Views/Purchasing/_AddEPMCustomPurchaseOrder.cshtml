@model Client.Models.PurchaseOrder.PurchaseOrderVM
@Html.Partial("_ErrorDiv")
<div id="customPurchaseOrderNumberModal" class="modal fade" role="dialog">
    @using (Ajax.BeginForm("AddPurchaseOrdersCustomEPMDynamic", "Purchasing", new AjaxOptions { HttpMethod = "Post", OnSuccess = "POAddOnSuccess", OnBegin = "AjaxBeginFormBegin", OnComplete = "AjaxBeginFormComplete", OnFailure = "AjaxBeginFormFaillure" }))
        {
        @Html.AntiForgeryToken()
    <div class="modal-dialog modal-info">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close clearstate1" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"> @UtilityFunction.GetMessageFromResource("spnEPMPurchaseOrder", LocalizeResourceSetConstants.Global)</h4>
            </div>

            <div class="modal-body">
                <div class="form-group" style="margin-bottom:0;">
                    <div class="bottomBlock">
                        <div class="tabsArea1 nobg">
                            <ul class="listView nobrd" style="border-bottom:0;">
                                <li style="margin-bottom:3px;">
                                    <span class="label"> @UtilityFunction.GetMessageFromResource("spnInitials", LocalizeResourceSetConstants.Global): <small>*</small> </span>
                                    <span class="inputText">
                                        @Html.ValidationMessageFor(m => m.addCustomPurchaseOrder.Initials, "", new { style = "display:none" })
                                        @Html.TextBoxFor(m => m.addCustomPurchaseOrder.Initials, new { @class = "form-control search", autocomplete = "off", maxlength = "3" })
                                    </span>
                                </li>

                                <li style="margin-bottom:4px;">
                                    <span class="label">@UtilityFunction.GetMessageFromResource("GlobalShipTo", LocalizeResourceSetConstants.Global): <small>*</small></span>
                                    <span class="inputText">
                                        @Html.ValidationMessageFor(m => m.addCustomPurchaseOrder.ShiptoSuffix, "", new { style = "display:none" })
                                        @Html.DropDownListFor(m => m.addCustomPurchaseOrder.ShiptoSuffix, Model.ShipToClientLookupList, "--Select--", new { @class = "form-control search select2picker", style = "width:100%;" })
                                    </span>
                                </li>

                            </ul>
                        </div>
                        <div style="clear:both;"></div>
                    </div>
                </div>
            </div>

            <div class="modal-footer" style="padding:15px 25px !important;">
                <div class="idBttns">
                    <div class="bttn_pagin">
                        <div class="bttns2" style="margin:0;">
                            <button type="submit" class="btn btn-blue" style="cursor:pointer" name="Command" value="saveCustomEPMPO" id="btnCustomEPMPOSave">
                                <i class="fa fa-save faIcon"></i> &nbsp;@UtilityFunction.GetMessageFromResource("globalSubmit", LocalizeResourceSetConstants.Global)
                            </button>
                        </div>
                        <div class="bttns" style="margin:0;"><button type="button" data-dismiss="modal" class="btn btn-blue mobBttn clearstate" id="btnCustomEPMPOCancel"><i class="fa fa-close faIcon"></i> &nbsp;@UtilityFunction.GetMessageFromResource("globalCancel", LocalizeResourceSetConstants.Global)</button></div>

                        <div style="clear:both;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
</div>
