@model Client.Models.Invoice.InvoiceVM
<div id="purchasepartModal" class="modal fade dropdown-modal" role="dialog" style="display:none;">
    <div class="modal-dialog partPopup">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="hdrPopVendor">@Model.Loc.Where(a => a.ResourceId == "spnIdSelectPurchaseOrder").FirstOrDefault().Value.ToString()</h4>
            </div>
            <div class="modal-body">
                <div id="tbldropdown" class="dropdown-content tbl-dropdown" style="display:block;">
                    <div class="table-responsive dropTableOuter">
                        <table id="InvoicePurchaseOrdersTable" class="stripe dropTable globalDropTable tableWOBtn" style="width:100%;">
                            <thead>
                                <tr>
                                    <th>@Model.Loc.Where(a => a.ResourceId == "spnIdPurchaseOrderID").FirstOrDefault().Value.ToString()</th>
                                    <th>@Model.Loc.Where(a => a.ResourceId == "spnIdStatus").FirstOrDefault().Value.ToString()</th>
                                    <th>@Model.Loc.Where(a => a.ResourceId == "spnIdVendor").FirstOrDefault().Value.ToString()</th>
                                    <th>@Model.Loc.Where(a => a.ResourceId == "spnIdVendorName").FirstOrDefault().Value.ToString()</th>
                                </tr>
                            </thead>
                            <tfoot id="tblPurchaseOrderfooter" style="display:none">
                                <tr>
                                    <th style="position:relative;">@Model.Loc.Where(a => a.ResourceId == "spnIdPurchaseOrderID").FirstOrDefault().Value.ToString()</th>
                                    <th style="position:relative;">@Model.Loc.Where(a => a.ResourceId == "spnIdStatus").FirstOrDefault().Value.ToString()</th>
                                    <th style="position:relative;">@Model.Loc.Where(a => a.ResourceId == "spnIdVendor").FirstOrDefault().Value.ToString()</th>
                                    <th style="position:relative;">@Model.Loc.Where(a => a.ResourceId == "spnIdVendorName").FirstOrDefault().Value.ToString()</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="padding:15px 25px !important;">
                <div style="clear:both;"></div>
            </div>
        </div>
    </div>
</div>

<style type="text/css">
    .dropdown-modal .tbl-dropdown .dataTables_wrapper {
        width: 100% !important;
    }
</style>