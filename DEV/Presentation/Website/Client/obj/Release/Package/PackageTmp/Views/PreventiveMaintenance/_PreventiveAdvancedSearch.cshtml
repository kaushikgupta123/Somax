@model Client.Models.PreventiveMaintenance.PrevMaintVM
<nav id="sidebar">
    <div id="dismiss">
        <i class="fa fa-close"></i>
    </div>
    <div class="sidebar-header">
        <h3><i class="fa fa-filter" style="position: relative; top: -2px;"></i> @Model.Loc.Where(a => a.ResourceId == "spnFilters").FirstOrDefault().Value.ToString() <span class="filteritemcount">0</span></h3>
        <button type="button" class="btn btn-blue filterSearch" id="btnPreventiveAdvSrch">@Model.Loc.Where(a => a.ResourceId == "GlobalApply").FirstOrDefault().Value.ToString()</button>
    </div>

    <div class="sidebar-content" id="advsearchsidebar">
        <div class="form-group">
            <label for="masterjobid">@Model.Loc.Where(a => a.ResourceId == "spnPrevMstrId").FirstOrDefault().Value.ToString() :</label>
            <input type="text" class="form-control search adv-item" autocomplete="off" id="masterjobid">
        </div>
        <div class="form-group">
            <label for="Description">@Model.Loc.Where(a => a.ResourceId == "spnDescription").FirstOrDefault().Value.ToString() :</label>
            <input type="text" class="form-control search adv-item" autocomplete="off" id="Description">
        </div>
        <div class="form-group">
            <label for="scheduletype">@Model.Loc.Where(a => a.ResourceId == "spnSchdType").FirstOrDefault().Value.ToString() :</label>
            @Html.DropDownListFor(m => m.preventiveMaintenanceModel.ScheduleType, Model.preventiveMaintenanceModel.ScheduleTypeList, "--Select--", new { @class = "form-control search select2picker adv-item", id = "scheduletype", style = "width:100%;" })
        </div>
        <div class="form-group">
            <label for="Type">@Model.Loc.Where(a => a.ResourceId == "GlobalType").FirstOrDefault().Value.ToString() :</label>
            @Html.DropDownListFor(m => m.preventiveMaintenanceModel.TypeList, Model.preventiveMaintenanceModel.TypeList, "--Select--", new { @class = "form-control search select2picker adv-item", id = "Type", style = "width:100%;" })
        </div>
        <div class="form-group">
            <label for="ChargeTo">@Model.Loc.Where(a => a.ResourceId == "GlobalChargeTo").FirstOrDefault().Value.ToString() :</label>
            <input type="text" class="form-control search adv-item" autocomplete="off" id="ChargeTo">
        </div>
        <div class="form-group">
            <label for="ChargeToName">@Model.Loc.Where(a => a.ResourceId == "spnChargeToName").FirstOrDefault().Value.ToString() :</label>
            <input type="text" class="form-control search adv-item" autocomplete="off" id="ChargeToName">
        </div>
    </div>
</nav>
