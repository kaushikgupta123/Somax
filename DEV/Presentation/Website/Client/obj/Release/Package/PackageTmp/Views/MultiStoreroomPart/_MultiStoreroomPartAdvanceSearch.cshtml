@model Client.Models.MultiStoreroomPart.MultiStoreroomPartVM

<nav class="sidebar">
    <div class="dismiss">
        <i class="fa fa-close"></i>
    </div>
    <div class="sidebar-header">
        <h3><i class="fa fa-filter" style="position: relative; top: -2px;"></i>&nbsp;@Model.Loc.Where(a => a.ResourceId == "globalFilter").FirstOrDefault().Value.ToString()<span class="filteritemcount">0</span></h3>
        <button type="button" class="btn btn-blue filterSearch" id="btnMSPDataAdvSrch">
            @Model.Loc.Where(a => a.ResourceId == "GlobalApply").FirstOrDefault().Value.ToString()
        </button>
    </div>
    <div class="sidebar-content" id="advsearchsidebar">
        <form action="#" method="post">
            <div class="form-group prc-ClientLookupId">
                <label for="PartId">@Model.Loc.Where(a => a.ResourceId == "spnPartID").FirstOrDefault().Value.ToString() :</label>
                <input type="text" class="form-control search adv-item" id="PartId" autocomplete="off">
            </div>
            <div class="form-group prc-Description">
                <label for="Description">@Model.Loc.Where(a => a.ResourceId == "spnDescription").FirstOrDefault().Value.ToString() :</label>
                <input type="text" class="form-control search adv-item" id="Description" autocomplete="off">
            </div>
            <div class="form-group">
                <label for="Storeroom">@Model.Loc.Where(a => a.ResourceId == "spnDefaultStoreroom").FirstOrDefault().Value.ToString() :</label>

                @Html.DropDownListFor(m => m.DefaultStoreroom, Model.StoreroomList, new { @class = "form-control search adv-item select2picker Select2-multiselect", style = "width:100%;", @id = "Storeroom", multiple = "multiple" })
            </div>
            <div class="form-group">
                <label for="StockType">@Model.Loc.Where(a => a.ResourceId == "spnStockType").FirstOrDefault().Value.ToString() : </label>
                @Html.DropDownListFor(m => m.MultiStoreroomPartModel.StockType, Model.MultiStoreroomPartModel.LookupStokeTypeList, "--Select--", new { @class = "form-control search adv-item select2picker", @id = "StockType" })
            </div>
        </form>
    </div>
</nav>




<style>
    .select2-container--default .select2-selection--single, .select2-container--default .select2-selection--multiple {
        height: auto !important;
    }
</style>