@model Client.Models.FleetAsset.FleetAssetVM
<div class="m-portlet padAdjstNew" id="m_portlet">
    <div class="m-portlet__head" style="padding:0; margin-bottom:10px;">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text" style="font-size: 1.2rem; line-height:3.55;">
                    @Model.Loc.Where(a => a.ResourceId == "spnAvailability").FirstOrDefault().Value.ToString()
                </h3>
            </div>
        </div>
    </div>

    <div style="padding-top:5px;">
            <div style="padding-bottom:10px;">
                <div style="padding:0 5px;">
                    <div class="form-group" style="margin-bottom:0;">                        
                        <div class="clsOutservice" style="padding:0; margin:0 0 20px 0;">
                            <h2 class="m-portlet__head-text outserv outservBig">
                                @Model.Loc.Where(a => a.ResourceId == "spnOutofService").FirstOrDefault().Value.ToString()
                            </h2>
                            <div class="outDetails">
                                <div class="form-group" style="margin-bottom:0;">
                                    <label for="Line" id="lblremove" style="font-weight:500; margin-bottom:0;">@Model.Loc.Where(a => a.ResourceId == "globalRemoved").FirstOrDefault().Value.ToString():</label>
                                    @if (Model.FleetAssetModel.RemoveFromServiceDate.HasValue && Model.FleetAssetModel.RemoveFromServiceDate.Value != default(DateTime))
                                    {
                                        <label class="inputText" style="margin-bottom:0;">@Model.FleetAssetModel.RemoveServiceDate.ToString("MM/dd/yyyy hh:mm tt", CultureInfo.InvariantCulture)</label>
                                    }
                                    else
                                    {
                                        <label class="inputText" style="margin-bottom:0;"></label>
                                    }

                                </div>
                                <div class="form-group" style="margin-bottom:0;">
                                    <label for="Line" id="lblremove" style="font-weight:500; margin-bottom:0;">@Model.Loc.Where(a => a.ResourceId == "spnExpectedReturn").FirstOrDefault().Value.ToString():</label>
                                    @if (Model.FleetAssetModel.ExpectedReturnToService.HasValue && Model.FleetAssetModel.ExpectedReturnToService.Value != default(DateTime))
                                    {
                                        <label class="inputText" style="margin-bottom:0;">@Model.FleetAssetModel.ExpectedReturnToService.Value.ToString("MM/dd/yyyy", CultureInfo.InvariantCulture)</label>
                                    }
                                    else
                                    {
                                        <label class="inputText" style="margin-bottom:0;"></label>
                                    }
                                </div>
                            </div>
                            <div style="clear:both;"></div>
                        </div>
                        <div class="form-group">
                            <label for="Line" id="lblreason" style="font-weight:500">@Model.Loc.Where(a => a.ResourceId == "GlobalReason").FirstOrDefault().Value.ToString():</label>
                            <div>
                                <label for="Line" class="reason">@Model.FleetAssetModel.RemoveFromServiceReason</label>
                            </div>
                        </div>
                        <button type="button" class="btn btn-blue mobBttn" id="btnReturn" data-equipid="@Model.FleetAssetModel.EquipmentID" style="cursor:pointer; float:right;"><i class="fa fa-undo"></i>&nbsp;@Model.Loc.Where(a => a.ResourceId == "GlobalReturn").FirstOrDefault().Value.ToString()</button>
                        <button type="button" class="btn btn-blue mobBttn" id="btnUpdate" data-toggle="modal" data-target="#AssetAvailabilityModal" style="cursor:pointer; float:right; margin-right:10px;"><i class="fa fa-pencil-square-o"></i>&nbsp;@Model.Loc.Where(a => a.ResourceId == "globalUpdate").FirstOrDefault().Value.ToString()</button>
                        <button type="button" class="btn btn-blue mobBttn" id="btnViewLog" style="cursor:pointer; float:left;"><i class="fa fa-history"></i>&nbsp;@Model.Loc.Where(a => a.ResourceId == "spnViewLog").FirstOrDefault().Value.ToString()</button>
                        <div style="clear:both;"></div>
                    </div>
                </div>
            </div>
    </div>
</div>

<style type="text/css">
    .outservBig { padding: 3px 15px; width: auto; float: left; margin: 3px 20px 0 0; font-size: 18px; border-radius: 5px; }
    .outDetails { float:left; }
</style>
