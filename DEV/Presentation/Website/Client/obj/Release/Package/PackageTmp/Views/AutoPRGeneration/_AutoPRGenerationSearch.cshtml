@model Client.Models.AutoPRGenerationVM
<div class="row" id="divAutoPRGenerationSearch" style="display:none;">

    <div class="col-xl-12">
        <div class="m-portlet newPort" style="padding:15px; margin-top:5px;display:none" id="AutoGenPRcontainer">
            <div style="clear:both;"></div>
            <div id="Active" class="tabcontent" style="display:block;">
                <div style="clear:both;"></div>
                <div class="actionBar">
                    <div class="pull-left">
                        <button type="button" class="btn btn-white navbar-btn" id="AutoGenPRGensidebarCollapse" title="Advance Search"><i class="fa fa-filter" style="font-size: 1.3rem;"></i></button>

                        <ul class="filter_apply">
                            <li class="textFilter"><span class="filteritemcount">0</span> @Model.Loc.Where(a => a.ResourceId == "globalFiltersAppiled").FirstOrDefault().Value.ToString()</li>
                            <li class="textClear" id="liClearAdvSearchFilterAVAutoPRGen"><a href="javascript:void(0)">@Model.Loc.Where(a => a.ResourceId == "globalClear").FirstOrDefault().Value.ToString()</a></li>
                        </ul>
                        <div style="clear:both;"></div>
                    </div>

                    <div class="pull-right">
                        <button type="button" class="btn btn-white import-export" id="btnAutoPRGenExport" disabled onclick="funcShowExportbtn()">@Model.Loc.Where(a => a.ResourceId == "spnExport").FirstOrDefault().Value.ToString()</button>
                        <button type="button" class="btn btn-white" id="liCustomize" title="Customize" data-toggle="modal" data-target="#gridcolumncustomizemodal"><i class="fa fa-cog" style="font-size: 1.3rem;"></i></button>
                        <div style="clear:both;"></div>
                    </div>
                    <div style="clear:both;"></div>
                    <div id="advsearchfilteritems"></div>
                    <div style="clear:both;"></div>
                </div>
                <div class="table-responsive">
                    <table id="tblAutoPRGenerationSearch" class="eqpDtlTbl row-border custom-sort tblMain hover haschild tblDefaultSort" style="width:100%;">
                        <thead>
                            <tr>
                                <th><input name="select_all" value="1" id="AutoPRGenerationSearch-select-all" type="checkbox" /></th>
                                <th id="thPartClientLookupId" data-col="1" class="th-AutoPRGenerationSearch PartId" data-th-index="0" data-th-prop="PartId"> @Model.Loc.Where(a => a.ResourceId == "spnPartID").FirstOrDefault().Value.ToString()</th>
                                <th data-th-index="1" data-col="2" class="Description" data-th-prop="Description">@Model.Loc.Where(a => a.ResourceId == "spnPartDescription").FirstOrDefault().Value.ToString()</th>
                                <th id="thQtyToOrder" data-col="3" class="QtyToOrder" data-th-index="2" data-th-prop="QtyToOrderString">@Model.Loc.Where(a => a.ResourceId == "spnOrderQnt").FirstOrDefault().Value.ToString()</th>
                                <th data-th-index="3" data-col="4" class="UnitofMeasure" data-th-prop="UnitofMeasureString">@Model.Loc.Where(a => a.ResourceId == "spnPRUnit").FirstOrDefault().Value.ToString()</th>
                                <th id="thLastPurchaseCost" data-col="5" class="LastPurchaseCost" data-th-index="4" data-th-prop="LastPurchaseCost">@Model.Loc.Where(a => a.ResourceId == "spnCost").FirstOrDefault().Value.ToString()</th>
                                <th id="thVendorClientLookupId" data-col="6" class="VendorClientLookupId" data-th-index="5" data-th-prop="VendorClientLookupIdString"> @Model.Loc.Where(a => a.ResourceId == "spnVendorID").FirstOrDefault().Value.ToString()</th>
                                <th class="VendorName" data-col="7" data-th-index="6" data-th-prop="VendorNameString">@Model.Loc.Where(a => a.ResourceId == "spnVendorName").FirstOrDefault().Value.ToString()</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
            <div style="clear:both;"></div>
            <div class="col-lg-12 col-md-12" style="text-align:right;padding:10px;">
                @*<div class="pull-left">
                    <ul class="filter_apply2">
                        <li><span class="PartGridSelectitemcount">0</span>&nbsp;@Model.Loc.Where(a => a.ResourceId == "globalItemsSelected").FirstOrDefault().Value.ToString()</li>
                    </ul>

                </div>*@
                <div class="idBttns">
                    <div class="bttn_pagin">
                        <div class="bttns2">
                            <button type="button" class="btn btn-blue mobBttn" id="btnCreatePurchaseRequest"><i class="fa fa-plus faIcon"></i> &nbsp;@Model.Loc.Where(a => a.ResourceId == "spnCreatePurchaseRequests").FirstOrDefault().Value.ToString()</button>
                        </div>

                        <div style="clear:both;"></div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
@Html.Partial("_CustomizeGridSetup")
@Html.Partial("_Export")
<div id="AutoPRGeneratedadvsearchcontainer">
    @Html.Partial("_AutoPRGenerationAdvSearch")
</div>


