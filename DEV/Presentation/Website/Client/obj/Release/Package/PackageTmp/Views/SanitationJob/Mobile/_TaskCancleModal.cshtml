@model Client.Models.Sanitation.SanitationVM

<div class="slide-modal" id="sjCancelTaskModal">
    <div class="slide-modal-head">
        <a class="slide-back-btn sjTaskCancelModal"> <i class="fa fa-angle-left"></i> Back</a>
        <div class="slide-back-title">
            @Model.Loc.Where(a => a.ResourceId == "globalCancel").FirstOrDefault().Value.ToString()
        </div>
    </div>

    <div class="slide-modal-body">
        <div mbsc-page class="demo-responsive">
            <div style="height:100%">
                <div mbsc-form class="mbsc-form-grid">
                    <div class="mbsc-grid">
                        <div class="mbsc-row">
                            <div class="mbsc-col-12 mbsc-col-md-12 mbsc-col-lg-12">
                                <label>
                                    @Model.Loc.Where(a => a.ResourceId == "spnCancelReason").FirstOrDefault().Value.ToString()
                                    @Html.DropDownListFor(m => m.sanitationJobTaskModel.CancelReason, new List<SelectListItem> { }, "--Select--", new
                               {
                                   id = "taskCancelReasonSelect",
                                   @class = "form-control search mobiscrollselect",
                                   @style = "width:100%;",
                                   @mbsc_dropdown = "true",
                                   @data_label = Model.Loc.Where(a => a.ResourceId == "spnTool").FirstOrDefault().Value.ToString(),
                                   @data_input_style = "box",
                                   @data_label_style = "floating",
                                   @placeholder = Model.Loc.Where(a => a.ResourceId == "spnTool").FirstOrDefault().Value.ToString()
                               })
                                </label>
                                @Html.ValidationMessageFor(m => m.sanitationJobTaskModel.CancelReason, "", new { })
                            </div>


                            <div class="mbsc-col-12 mbsc-col-md-12 mbsc-col-lg-12">
                                <div class="design-box">
                                    <div class="mbsc-button-group-block">
                                        <button type="button" class="btn btn-default mobBttn sjTaskCancelModal"><i class="fa fa-close buttonIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalCancel").FirstOrDefault().Value.ToString()</button>
                                    </div>
                                </div>
                            </div>
                            <div class="mbsc-col-12 mbsc-col-md-12 mbsc-col-lg-12">
                                <div class="design-box">
                                    <div class="mbsc-button-group-block">
                                        <button data-color="success" type="button" class="btn btn-blue mobBttn" id="btnSjTaskCancelMbl"><i class="fa fa-check buttonIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalOK").FirstOrDefault().Value.ToString()</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="slide-modal-footer"></div>
    @Html.HiddenFor(m => m.sanitationJobTaskModel.SanitationJobId)
</div>
<script>
    $(function () {
        $(document).find('form').find("#sanitationCancelAndPrintListModel_CancelReason").removeClass("input-validation-error");

    });
</script>