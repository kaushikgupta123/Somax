
@model Client.Models.Dashboard.DashboardVM
<div id="Dashboardcustomizemodal" class="modal fade" role="dialog">
    <div class="modal-dialog gridModal">
        <div class="modal-content" style="max-height:650px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Model.Loc.Where(a => a.ResourceId == "spnChooseWidgets").FirstOrDefault().Value.ToString()</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    @{
                        string display = "none";
                        if (Model.IsMultipleDashboardAccess)
                        {
                            display = "block";
                        }
                    }
                    <div class="col-md-12" style="display:@display;">
                        <ul class="form-control" style="border: 0; padding: 0; margin-bottom: 10px;">
                            <li>
                                <a>
                                    <label class="m-checkbox m-checkbox--bold m-checkbox--state-success checkbox" for="SetAsDefault">
                                        <input type="checkbox" id="SetAsDefault" class="m-checkbox m-checkbox--bold m-checkbox--state-success checkbox">
                                        @Model.Loc.Where(a => a.ResourceId == "spnDefaultDashboard").FirstOrDefault().Value.ToString()
                                        <span></span>
                                    </label>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">@Model.Loc.Where(a => a.ResourceId == "spnAvailableWidgets").FirstOrDefault().Value.ToString()</label>
                        <ul class="form-control cntSource">
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <div class="newRightPopArea">
                            <label class="control-label">@Model.Loc.Where(a => a.ResourceId == "spnSelectedWidgets").FirstOrDefault().Value.ToString() (<span id="lblCounter">@Model.Loc.Where(a => a.ResourceId == "globalNone").FirstOrDefault().Value.ToString()</span>)</label>
                            <div class="cntPresenter">
                                <ul id="PresenterList">
                                </ul>
                            </div>
                        </div>
                        <div style="margin-top:10px;">
                            <button type="button" class="btn btn-white" id="btnRemovewidget">
                                <i class="fa fa-close" aria-hidden="true"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalRemove").FirstOrDefault().Value.ToString()
                            </button>
                        </div>
                    </div>
                    <div style="clear:both;"></div>
                </div>

            </div>
            <div class="modal-footer" style="padding-top:15px !important;">
                <button type="button" data-dismiss="modal" class="btn btn-white saveConfig" style="float:right;">
                    <i class="fa fa-save faIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalSave").FirstOrDefault().Value.ToString()
                </button>
                <button type="button" class="btn btn-white" data-dismiss="modal">
                    <i class="fa fa-close faIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalCancel").FirstOrDefault().Value.ToString()
                </button>
                <div style="clear:both;"></div>
            </div>
        </div>

    </div>
</div>

<style type="text/css">


    .multiselect-container {
        min-height: 318px !important;
    }
    .m-checkbox {
        color: #1b1919 !important;
    }
</style>