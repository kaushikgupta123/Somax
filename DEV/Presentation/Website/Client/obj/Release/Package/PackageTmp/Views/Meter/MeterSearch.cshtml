@model Client.Models.Meters.MetersVM

@if (Convert.ToString(Session["MenuState"]) == "" || Convert.ToString(Session["MenuState"]) == "open")
{
    <div class="m-subheader fixedDiv1">
        <div class="new-m-subheader">
            <div class="PageTitle">
                <div class="align-items-center separator">
                    <h3 class="m-subheader__title ">
                        @Model.Loc.Where(a => a.ResourceId == "Meter").FirstOrDefault().Value.ToString()
                     </h3>
                </div>
            </div>

            <div class="NewBreadcrumbArea">
                <div class="newBreadcrumb">
                    <ul>
                        <li><a href="/Dashboard/Dashboard">&nbsp;</a></li>
                        <li class="active">@Model.Loc.Where(a => a.ResourceId == "spnMeterSearch").FirstOrDefault().Value.ToString()</li>
                    </ul>
                    <div style="clear:both;"></div>
                </div>
            </div>

            <div class="ActionBttnArea">
                @if (Model.security.Meters.Create)
                {
                <button type="button" class="btn newBtn-add AddMeter pull-left" id="AddMeter" title="Add Meter">@Model.Loc.Where(a => a.ResourceId == "spnAddNewMeter").FirstOrDefault().Value.ToString()</button>
                }
                <div style="clear:both;"></div>
            </div>
            <div style="clear:both;"></div>
        </div>
    </div>
}
else
{
    <div class="m-subheader fixedDiv1 fixupperpannel2">
        <div class="new-m-subheader">
            <div class="PageTitle">
                <div class="align-items-center separator">
                    <h3 class="m-subheader__title ">
                        @Model.Loc.Where(a => a.ResourceId == "Meter").FirstOrDefault().Value.ToString()
                    </h3>
                </div>
            </div>

            <div class="NewBreadcrumbArea">
                <div class="newBreadcrumb">
                    <ul>
                        <li><a href="/Dashboard/Dashboard">&nbsp;</a></li>
                        <li class="active">@Model.Loc.Where(a => a.ResourceId == "spnMeterSearch").FirstOrDefault().Value.ToString()</li>
                    </ul>
                    <div style="clear:both;"></div>
                </div>
            </div>

            <div class="ActionBttnArea">
                    @if (Model.security.Meters.Create)
                    {
                <button type="button" class="btn newBtn-add AddMeter pull-left" id="AddMeter" title="Add Meter">@Model.Loc.Where(a => a.ResourceId == "spnAddNewMeter").FirstOrDefault().Value.ToString()</button>
                    }
                <div style="clear:both;"></div>
            </div>
            <div style="clear:both;"></div>
        </div>
    </div>
}
<div class="pushDiv1"></div>

<div class="row">
    <div class="col-xl-12">
        <div class="m-portlet" id="m_portlet" style="padding:15px; margin-bottom:0;">
            <div class="actionBar" style="display:none" id="meterGridAction">
                <div class="pull-left">
                    <div class="ActiveInactiveDrop LoaderDrop">
                        <select class="form-control search select2-not-search LoaderDrop" id="meterstatusDropdown">
                            <option value="1">@Model.Loc.Where(a => a.ResourceId == "globalActive").FirstOrDefault().Value.ToString()</option>
                            <option value="2">@Model.Loc.Where(a => a.ResourceId == "globalInActive").FirstOrDefault().Value.ToString()</option>
                        </select>
                    </div>
                    <button type="button" class="btn btn-white navbar-btn" id="sidebarCollapse" title="Advance Search"><i class="fa fa-filter" style="font-size: 1.3rem;"></i></button>
                    <ul class="filter_apply">
                        <li class="textFilter"><span class="filteritemcount">0</span>&nbsp;@Model.Loc.Where(a => a.ResourceId == "globalFiltersAppiled").FirstOrDefault().Value.ToString()</li>
                        <li class="textClear" id="liClearAdvSearchFilter"><a href="javascript:void(0)">@Model.Loc.Where(a => a.ResourceId == "globalClear").FirstOrDefault().Value.ToString()</a></li>
                    </ul>
                    <div style="clear:both;"></div>
                </div>

                <div class="pull-right meterExprtArea">
                    <button type="button" class="btn btn-white import-export" onclick="funcShowExportbtn()">@Model.Loc.Where(a => a.ResourceId == "spnExport").FirstOrDefault().Value.ToString()</button>
                    <button type="button" class="btn btn-white" id="liCustomize" title="Customize" data-toggle="modal" data-target="#gridcolumncustomizemodal"><i class="fa fa-cog" style="font-size: 1.3rem;"></i></button>
                    <div style="clear:both;"></div>
                </div>
                <div style="clear:both;"></div>
                <div id="dvFilterSearchSelect2"></div>
                <div style="clear:both;"></div>
            </div>
            <div style="clear:both;"></div>

            <div id="Active" class="tabcontent" style="display:block;">
                <div class="table-responsive">
                    <table id="meterSearch" class="eqpDtlTbl row-border custom-sort" style="width:100%;">
                        <thead>
                            <tr>
                                <th data-th-index="0">@Model.Loc.Where(a => a.ResourceId == "spnMeterID").FirstOrDefault().Value.ToString()</th>
                                <th data-th-index="1">@Model.Loc.Where(a => a.ResourceId == "spnName").FirstOrDefault().Value.ToString()</th>
                                <th data-th-index="2" style="text-align:right !important;">@Model.Loc.Where(a => a.ResourceId == "spnReadingCurrent").FirstOrDefault().Value.ToString()</th>
                                <th data-th-index="3">@Model.Loc.Where(a => a.ResourceId == "spnReadingDate").FirstOrDefault().Value.ToString()</th>
                                <th data-th-index="4">@Model.Loc.Where(a => a.ResourceId == "spnReadingBy").FirstOrDefault().Value.ToString()</th>
                                <th data-th-index="5" style="text-align:right !important;">@Model.Loc.Where(a => a.ResourceId == "spnReadingLife").FirstOrDefault().Value.ToString()</th>
                                <th data-th-index="6" style="text-align:right !important;">@Model.Loc.Where(a => a.ResourceId == "spnMaxReading").FirstOrDefault().Value.ToString()</th>
                                <th data-th-index="7">@Model.Loc.Where(a => a.ResourceId == "spnReadingUnits").FirstOrDefault().Value.ToString()</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_MeterAdvanceSearch")
@Html.Partial("_CustomizeGridSetup")
@Html.Partial("_Export")


