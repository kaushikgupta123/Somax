@model Client.Models.Parts.PartsVM
<div class="slide-modal" id="changeHandsOnQtyPopUp">
    <div class="slide-modal-head ">
        <a class="slide-back-btn closechangeHandsOnQtyPopUp"> <i class="fa fa-angle-left"></i> Back</a>
        <div class="slide-back-title">
            @Model.Loc.Where(a => a.ResourceId == "spnChangePartId").FirstOrDefault().Value.ToString()
        </div>
    </div>
    @Html.Partial("_ErrorDiv")
    @using (Ajax.BeginForm("SaveItemPhysicalInventory", "Parts", new AjaxOptions { HttpMethod = "Post", OnSuccess = "ValidationHandsQtyOnSuccess", OnBegin = "AjaxBeginFormBegin", OnFailure = "AjaxBeginFormFaillure" }))
    {
        <div class="slide-modal-body">
            <div mbsc-page class="demo-responsive">
                <div style="height:100%">
                    <div mbsc-form class="mbsc-form-grid">
                        <div class="mbsc-grid">
                            <div class="mbsc-row">
                                <div class="mbsc-col-12 mbsc-col-md-12 mbsc-col-lg-12">
                                    <label>
                                        @Model.Loc.Where(a => a.ResourceId == "spnOnHandQty").FirstOrDefault().Value.ToString()
                                        @Html.TextBoxFor(m => m.inventoryModel.ReceiptQuantity, new { @class = "form-control search decimalinput", @mbsc_input = "true", @data_label_style = "floating", @placeholder = Model.Loc.Where(a => a.ResourceId == "spnOnHandQty").FirstOrDefault().Value.ToString(), @data_input_style = "box", autocomplete = "off" })
                                    </label>
                                    @Html.ValidationMessageFor(m => m.inventoryModel.ReceiptQuantity, "", new { })
                                </div>
                            </div>
                            <div class="mbsc-row">
                                <div class="mbsc-col-12 mbsc-col-md-6 mbsc-col-lg-6">
                                    <div class="design-box">
                                        <div class="mbsc-button-group-block">
                                            <button mbsc-button data-color="success" type="button" class="btn btn-blue mobBttn closechangeHandsOnQtyPopUp"><i class="fa fa-close faIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalCancel").FirstOrDefault().Value.ToString()</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="mbsc-col-12 mbsc-col-md-6 mbsc-col-lg-6">
                                    <div class="design-box">
                                        <div class="mbsc-button-group-block">
                                            <button data-color="success" type="submit" class="btn btn-blue mobBttn" style="cursor:pointer"><i class="fa fa-save faIcon"></i> &nbsp;@Model.Loc.Where(a => a.ResourceId == "spnReccord").FirstOrDefault().Value.ToString()</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @Html.HiddenFor(m => m.inventoryModel.PartId)
        @Html.HiddenFor(m => m.inventoryModel.PartClientLookupId)
        @Html.HiddenFor(m => m.inventoryModel.PartUPCCode)
        @Html.HiddenFor(m => m.inventoryModel.Description)
    }
    <div class="slide-modal-footer"></div>
</div>
