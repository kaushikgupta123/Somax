@model Client.Models.Parts.PartsVM

@{
    ViewBag.Title = "Somax | Parts";
}

@Styles.Render("~/Content/datatable")
<link href="~/Scripts/dropzone/basic.min.css" rel="stylesheet" />
<link href="~/Scripts/dropzone/dropzone.min.css" rel="stylesheet" />
<link href="~/Content/sidebar_custom.css" rel="stylesheet" />
<link href="~/Scripts/Metronic/assets/demo/default/base/GlobalSearchGrid.css" rel="stylesheet" />
@if (Model.userData.IsLoggedInFromMobile)
{
    @section scripts {
        @Scripts.Render("~/bundles/QRScanner")
        @Scripts.Render("~/bundles/datatable")
        @Scripts.Render("~/bundles/PartsMobile")
        @Scripts.Render("~/bundles/imagezoom")
        @Scripts.Render("~/bundles/QRPrint")
        @Scripts.Render("~/bundles/SomaxCkEditor")
        @Scripts.Render("~/bundles/ImageCompressor")
<script type="text/javascript">
            var IsAdd = '@ViewBag.IsPartsAdd';
            if (IsAdd == 'True') {
                SetControls();
                SetControlsForAddPart()
                $('#AddPartModalDialog').addClass('slide-active').trigger('mbsc-enhance');
            }
</script>
    }
<div id="renderparts">

    @if (ViewBag.IsPartsAdd == true)
    {
        @Html.Partial("Mobile/_AddPartDynamicPopUp", Model)
    }
    else if (ViewBag.IsPartDetailsFromEquipment == true)
    {
        @Html.Partial("Mobile/_PartDetails", Model)
    }
    else
    {
        @Html.Partial("Mobile/_PartsSearch", Model)
    }
</div>
}
else
{
    @section scripts {
        @Scripts.Render("~/bundles/WebCam")
        @Scripts.Render("~/bundles/datatable")
        @*<script type="text/javascript" src="//unpkg.com/flatfile-csv-importer/build/dist/index.min.js"></script>*@
        @Scripts.Render("~/bundles/imagezoom")
        @Scripts.Render("~/bundles/QRPrint")
        @Scripts.Render("~/bundles/Parts")
        @Scripts.Render("~/bundles/SomaxCkEditor")
        @Scripts.Render("//unpkg.com/@flatfile/adapter/build/dist/index.min.js")
        @*V2-764*@
        @Scripts.Render("~/bundles/QRScanner")
        @Scripts.Render("~/bundles/ImageCompressor")
        <script type="text/javascript">
    var IsAdd = '@ViewBag.IsPartsAdd';
        </script>


    }

    <!--Qr Code Style-->
<div id="renderparts">

    @if (ViewBag.IsPartsAdd == true)
    {
        @*@Html.Partial("_PartsAdd", Model)*@
        @Html.Partial("_AddPartDynamic", Model)
    }
    else if (ViewBag.IsPartDetailsFromEquipment == true)
    {
        @Html.Partial("_PartDetails", Model)
    }
    else if (ViewBag.IsPartDetailsFromNotification == true)
    {
        @Html.Partial("_PartDetails", Model)
        @Html.Hidden("IsDetailFromNotification", true)
    }
    else
    {
        @*@Html.Partial("_PartsSearch", Model)*@
        @Html.Partial("_PartsSearch", Model)
    }
</div>
    <style type="text/css">
        .qrBox {
            text-align: center;
        }

        .qrBox2 {
            text-align: center;
        }

            .qrBox2 p {
                padding: 0 0 0 0;
                margin: 0;
                font-weight: bold;
            }

        .qrBox p {
            padding: 0 0 10px 0;
            margin: 0;
            font-weight: bold;
        }

        .secTitle {
            font-size: 14px;
            padding: 10px 0;
            margin: 0 0 10px 0;
            border-bottom: 1px solid #e9ecef;
        }

        .box1 {
            margin-bottom: 15px;
        }

        .countBox {
            width: 173px;
            height: 36px;
            margin: 0 auto;
            border: 1px solid #ccc;
            margin: 0 auto;
        }

        ul.levelSize {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            ul.levelSize li {
                border: 2px solid #ccc;
                padding: 5px;
                border-radius: 5px;
                float: left;
                width: 49%;
                margin-right: 2%;
            }

                ul.levelSize li:last-child {
                    margin-right: 0;
                }

                ul.levelSize li:hover {
                    border: 2px solid #315a98;
                    padding: 5px;
                }

        .txtList {
            float: left;
        }

            .txtList p {
                padding: 0;
                margin: 0;
                line-height: 22px;
            }

                .txtList p.first {
                    color: #000;
                    font-weight: 400;
                }

        .rdoBtn {
            float: left;
            margin-right: 10px;
            position: relative;
            top: 4px;
            margin-left: 5px;
        }

        .recommend {
            margin-top: 20px;
        }

            .recommend p {
                padding: 0 0 3px 0;
                margin: 0;
            }

        .prevArea {
            border: 1px solid #ccc;
            height: 285px;
            margin-bottom: 15px;
        }

        .codeArea {
            border: 1px solid #ccc;
            height: 75px;
        }

        .updateArea {
            margin-top: 0;
        }

        ul.filter_apply li:first-child {
            border-right: 1px solid #ccc;
            padding: 0 10px 0 0;
        }

        ul.filter_apply li:last-child {
            border-right: 0px solid #ccc;
            padding: 0 10px 0 0;
        }
    </style>
}