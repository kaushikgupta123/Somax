@model Client.Models.Parts.PartsVM

<div id="CreatedLastUpdatedModalPart" class="modal fade" role="dialog">
    <div class="modal-dialog modal-info">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Model.Loc.Where(a => a.ResourceId == "spnCreateLastUpdate").FirstOrDefault().Value.ToString()</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-6 col-sm-6">
                        <div class="form-group">
                            <h5>Created:</h5>
                            <div><label id="lblusercreated"><strong>User :</strong> @Model.createdLastUpdatedPartModel.CreatedUserValue</label></div>
                            <div>
                                <label id="lblcreateddate">
                                    <strong>Date :</strong>
                                    @Model.createdLastUpdatedPartModel.CreatedDateValue
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6">
                        <div class="form-group">
                            <h5>Last Updated:</h5>
                            <div><label id="lblusermodified"><strong>User :</strong> @Model.createdLastUpdatedPartModel.ModifyUserValue</label></div>
                            <div>
                                <label id="lblmodifieddate">
                                    <strong>Date :</strong>
                                    @Model.createdLastUpdatedPartModel.ModifyDatevalue
                                </label>
                            </div>
                        </div>
                    </div>
                    <div style="clear:both;"></div>
                </div>
            </div>
        </div>
    </div>
</div>

