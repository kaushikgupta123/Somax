@model Client.Models.Dashboard.DashboardVM
<div class="m-portlet m-portlet--full-height m-portlet--fit">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                    @Model.Loc.Where(a => a.ResourceId == "spnSOLaborHours").FirstOrDefault().Value.ToString()
                </h3>
            </div>
        </div>

    </div>
    <div class="m-portlet__body" style="">
        <div class="tab-content">
            <div class="dateRangeDrop">
                <div class="btn-group bootstrap-select m-datatable__pager-size dropup show selectDrop">
                    @Html.DropDownListFor(m => m.SoLaborHours, new SelectList(Model.SoLaborHoursList, "Value", "Text"), null, new { id = "LaborHrsDropdown", @class = "selectpicker m-datatable__pager-size" })
                </div>
                <div style="clear:both; height:15px;"></div>
            </div>
            <div class="chartBox" style="position:relative">
                <div class="lds-ellipsis lds-adjust" id="solaborhourchartloader">
                    <div></div>
                    <div></div>
                    <div></div>
                    <div></div>
                </div>
                <div class="cntNoData"><h5>@Model.Loc.Where(a => a.ResourceId == "globalDataNotFound").FirstOrDefault().Value.ToString()</h5></div>
                <canvas id="m_chart_Labor_Hr"></canvas>

            </div>
        </div>
    </div>
</div>
