@model SomaxMVC.Models.UserInfoDetails
<div class="modal-header">
    <h4 class="modal-title">
        Get help signing in to SOMAX
    </h4>
    <button type="button" class="close" style="font-size:21px" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <p>We sent password reset information to this email address:</p>
    <p id="user_Id">@Model.UserEmail</p>
    <br>
    <div class="m-stack__item m-stack__item--center">
        <div class="m-login__account">
            <span class="m-login__account-msg">
                Didn’t receive an email?
            </span>
            &nbsp;&nbsp;
            <a href="javascript:;" id="m_login_popupsignup" class="m-link m-link--focus m-login__account-link" style="color:#e64006">
                Click to re-send
            </a>
            <div id="resendMailLoader" class="m-loader m-loader--danger" style="width: 30px; display: none; top: -13px; left: 255px;"></div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <div class="m-login__form-action">
        <button id="m_popup_close" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air customBtnAdjust" data-dismiss="modal" style="float:left;">
            Back
        </button>
        <button id="m_login_page" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air customBtnAdjust" style="float:right;">
            Return To Sign In
        </button>
        <div style="clear:both;"></div>
    </div>
</div>
<style type="text/css">
    .btn.customBtnAdjust { padding: 7px 15px; border-radius: 15px; }
    .modal .modal-content .modal-header .close:before {
        content: "";
        display: none;
    }
</style>