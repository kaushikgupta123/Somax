@model SomaxMVC.Models.UserInfoDetails

<div class="m-login__forget-password">
    <div class="lockIcon"><img src="~/Scripts/Metronic/assets/app/media/img/logos/forgotIcon.png" /></div>
    <div class="m-login__head">
        <h3 class="m-login__title forgot">
            @Model.localization.Where(t => t.ResourceId == "m_login_forget_password").FirstOrDefault().Value ?
        </h3>
        <div class="m-login__desc">
            What can we help you with?
        </div>
    </div>
    <form class="m-login__form m-form" action="">
        <label class="m-radio m-radio--success" id="radioUserID" onclick="show1();">
            <input type="radio" name="example_2" value="1">I forgot my User ID
            <span></span>
        </label>

        <label class="m-radio m-radio--success" id="radioPassword" onclick="show2();">
            <input type="radio" name="example_2" value="1">	I forgot my password
            <span></span>
        </label>

        <div id="divUserID" class="hide">
            <h3 class="titleForgot">Forgot your User ID? Let's look it up with your email address.</h3>
            <p class="subTitleForgot">We'll email your User ID to you with a link to sign in.</p>
            <div class="form-group m-form__group">
                <input class="form-control m-input" type="text" placeholder='@Model.localization.Where(t => t.ResourceId == "m_email").FirstOrDefault().Value' name="email" id="m_email" autocomplete="off">
            </div>
            <div id="error_UserNameEMail" class="ul-login-error-lst text-danger errMsg" style="padding:10px 0; text-align:center;"></div>

            <div class="m-login__form-action" style="margin-bottom:0;">
                <button class="m_login_forget_password_submit btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air">
                    @Model.localization.Where(t => t.ResourceId == "forget_password_submit").FirstOrDefault().Value
                </button>
                <button class="m_login_forget_password_cancel btn btn-outline-focus m-btn m-btn--pill m-btn--custom">Cancel</button>
            </div>
        </div>

        <div id="divPassword" class="hide">
            <h3 class="titleForgot">Forgot your password? Enter your User ID and we'll email you a link to change your password.</h3>
            <div class="form-group m-form__group">
                <input class="form-control m-input" type="text" placeholder='@Model.localization.Where(t => t.ResourceId == "m_user").FirstOrDefault().Value' name="user" id="m_user" autocomplete="off">
            </div>

            <div id="error_UserIdEMail" class="ul-login-error-lst text-danger errMsg" style="padding:10px 0; text-align:center;"></div>

            <div class="m-login__form-action" style="margin-bottom:0;">
                <button class="m_login_forget_password_submit btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air">
                    @Model.localization.Where(t => t.ResourceId == "forget_password_submit").FirstOrDefault().Value
                </button>
                <button class="m_login_forget_password_cancel btn btn-outline-focus m-btn m-btn--pill m-btn--custom">Cancel</button>
            </div>
        </div>

        <div class="m-login__form-action" style="margin-bottom:0;" id="divCancelBtn">
            <button class="m_login_forget_password_cancel btn btn-outline-focus m-btn m-btn--pill m-btn--custom">Cancel</button>
        </div>

    </form>
</div>

<style type="text/css">
    .hide {
        display: none;
    }

    .m-radio {
        color: #ffffff;
        margin: 0 20px;
    }

        .m-radio.m-radio--success > span {
            border: 1px solid #ffffff;
        }

        .m-radio.m-radio--success > input:checked ~ span {
            border: 1px solid #e64006;
        }

        .m-radio.m-radio--success > span:after {
            border: solid #e64006;
            background: #e64006;
        }

    h3.titleForgot {
        margin-top: 1.5rem;
        text-align: center;
        font-size: 14px;
        color: #fff;
        font-weight: 300;
    }

    p.subTitleForgot {
        margin-top: 1rem;
        text-align: center;
        font-size: 12px;
        color: #fff;
        font-weight: 300;
    }
</style>