
@model Client.Models.FleetService.FleetServiceVM
<div id="scheduledServiceModal" class="modal fade dropdown-modal" role="dialog" style="display:none;">
    <div class="modal-dialog partPopup">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="hdrPopChildrenTitle">@Model.Loc.Where(a => a.ResourceId == "spnScheduledService").FirstOrDefault().Value.ToString()</h4>
            </div>
            <div class="modal-body">
                <div class="updateArea">
                    <div class="pull-left">
                        <ul class="filter_apply2">
                            <li><span class="itemcount">0</span>&nbsp; @Model.Loc.Where(a => a.ResourceId == "globalItemsSelected").FirstOrDefault().Value.ToString()</li>
                        </ul>
                        @*<button type="button" class="btn btn-blue" title="Print Labels" id="printQrcode" disabled="disabled"><i class="fa fa-print" style="margin-top:-3px;"></i></button>*@
                    </div>
                    <div class="pull-right">
                        <button type="button" class="btn btn-blue" id="btnAddScheduledService" style="float:right;">@Model.Loc.Where(a => a.ResourceId == "globalAdd").FirstOrDefault().Value.ToString()</button>
                    </div>
                    <div style="clear:both;"></div>
                </div>
                <div id="tbldropdown" class="dropdown-content tbl-dropdown" style="display:block;">
                    <div class="table-responsive dropTableOuter">
                        <table id="scheduledServiceTable" class="stripe dropTable globalDropTable haschild" style="width:100%;">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th style="padding-left:8px;">@Model.Loc.Where(a => a.ResourceId == "spnServiceTaskDesc").FirstOrDefault().Value.ToString()</th>
                                    <th style="padding-left:8px;">@Model.Loc.Where(a => a.ResourceId == "spnGlobalSchedule").FirstOrDefault().Value.ToString()</th>
                                    <th style="padding-left:8px;">@Model.Loc.Where(a => a.ResourceId == "spnNextDue").FirstOrDefault().Value.ToString()</th>
                                    <th style="padding-left:8px;">@Model.Loc.Where(a => a.ResourceId == "spnLastCompleted").FirstOrDefault().Value.ToString()</th>
                                </tr>
                            </thead>
                            <tfoot id="tblScheduledfooter" style="display:none">
                                <tr>
                                    <th></th>
                                    <th style="position:relative;">@Model.Loc.Where(a => a.ResourceId == "spnServiceTaskDesc").FirstOrDefault().Value.ToString()</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="padding:15px 25px !important;">
                <div style="clear:both;"></div>
            </div>
        </div>
    </div>
</div>
<style type="text/css">
    table.dataTable.dropTable tbody td {
        height: 27px;
    }

    .dropdown-content {
        height: 450px !important;
    }

    .dropdown-modal .tbl-dropdown .dataTables_wrapper {
        width: 100% !important;
    }

    .dtpickerNew { /*width: 120px;*/
        width: 100px;
        float: left;
    }

    .ui-datepicker-trigger {
        width: 30px;
        float: left;
        margin-left: -3px;
        margin-right: 10px;
    }


    #ui-datepicker-div.ui-datepicker.ui-widget.ui-widget-content {
        z-index: 1153 !important;
        top: 150px !important;
    }
</style>
