@model Client.Models.Configuration.ApprovalGroups.ApprovalGroupsVM
@{
    var RequestType = "";
    if (Model.ApprovalGroupsModel.RequestType == ApprovalGroupRequestTypes.MaterialRequest)
    {
        RequestType = UtilityFunction.GetMessageFromResource("spnMaterialRequest", LocalizeResourceSetConstants.Global);
    }
    else if (Model.ApprovalGroupsModel.RequestType == ApprovalGroupRequestTypes.PurchaseRequest)
    {
        RequestType = UtilityFunction.GetMessageFromResource("spnPurchaseRequest", LocalizeResourceSetConstants.Global);
    }
    else if (Model.ApprovalGroupsModel.RequestType == ApprovalGroupRequestTypes.WorkRequest)
    {
        RequestType = UtilityFunction.GetMessageFromResource("spnWorkRequest", LocalizeResourceSetConstants.Global);
    }
    else if (Model.ApprovalGroupsModel.RequestType == ApprovalGroupRequestTypes.SanitationRequest)
    {
        RequestType = UtilityFunction.GetMessageFromResource("spnSanitationRequest", LocalizeResourceSetConstants.SanitationDetails);
    }
}
<div class="col-xl-12">
    <div class="m-portlet padAdjst" id="m_portlet" style="padding:10px;">
        <div class="m-portlet__body  m-portlet__body--no-padding">
            <div class="row m-row--col-separator-xl">
                <div class="col-md-12">
                    <div class="m-portlet cardRow" style="margin-bottom:0; border:0;">
                        <div class="m-portlet__body gridList" style="padding:0;">
                            <div class="row summaryview">
                                <div class="col-lg-6 col-md-6">
                                    <div class="newDescription" style='line-height:25px;'>
                                        <p>
                                            @Model.Loc.Where(a => a.ResourceId == "spnDescription").FirstOrDefault().Value.ToString() :
                                            @if (Model.ApprovalGroupsModel.Description.Length > 30)
                                            {
                                                <strong>@Model.ApprovalGroupsModel.Description.Substring(0, 30) <span data-des="@Model.ApprovalGroupsModel.Description" style="color:#315a98;cursor:pointer" id="approvalGroupDescription">... More</span></strong>
                                            }
                                            else
                                            {
                                                <strong>@Model.ApprovalGroupsModel.Description</strong>
                                            }
                                        </p>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="newDescription" style='line-height:17px;'>
                                        <p>
                                            @Model.Loc.Where(a => a.ResourceId == "GlobalType").FirstOrDefault().Value.ToString() : <strong>@RequestType</strong>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("~/Views/Configuration/ApprovalGroups/_ApprovalSummaryDescription.cshtml")