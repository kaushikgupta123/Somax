@model Client.Models.Configuration.VendorCatalog.VendorCatalogVM
<nav id="sidebar">
    <div id="dismiss">
        <i class="fa fa-close"></i>
    </div>
    <div class="sidebar-header">
        <h3><i class="fa fa-filter " style="position: relative; top: -2px;"></i>&nbsp;@Model.Loc.Where(a => a.ResourceId == "spnFilters").FirstOrDefault().Value.ToString()<span id="spnControlCounter" class="filteritemcount">0</span></h3>
        <button type="button" class="btn btn-blue filterSearch" id="btnVenCatAdvSrch"><i class="fa fa-search" style="margin-top:-3px;"></i>&nbsp;@Model.Loc.Where(a => a.ResourceId == "globalSearch").FirstOrDefault().Value.ToString()</button>
    </div>
    <div class="sidebar-content" id="advsearchsidebar">
        <form action="#" method="post">
            <div class="form-group">
                <label for="PartID" id="lblPartID" name="PartID">@Model.Loc.Where(a => a.ResourceId == "spnPartID").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="PartID" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="Description" id="lblManufacturer">@Model.Loc.Where(a => a.ResourceId == "spnDescription").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="Description" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="Manufacturer" id="lblManufacturerID">@Model.Loc.Where(a => a.ResourceId == "spnManufacturer").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="Manufacturer" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="ManufacturerPartNumber" id="lblCategory">@Model.Loc.Where(a => a.ResourceId == "spnManufacturerPartID").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="ManufacturerPartNumber" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="Category" id="lblCatDescription">@Model.Loc.Where(a => a.ResourceId == "spnCategory").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="Category" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="CategoryDescription" id="lblDescription" name="Description">@Model.Loc.Where(a => a.ResourceId == "spnCategoryDescription").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="CategoryDescription" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="UnitCost" id="lblInactive" name="Inactive">@Model.Loc.Where(a => a.ResourceId == "spnUnitCost").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="UnitCost" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="PurchaseUnit" id="lblInactive" name="Inactive">@Model.Loc.Where(a => a.ResourceId == "spnPurchaseUnit").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="PurchaseUnit" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="VendorPartNumber" id="lblInactive" name="Inactive">@Model.Loc.Where(a => a.ResourceId == "spnVendorPartNumber").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="VendorPartNumber" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="VendorName" id="lblInactive" name="Inactive">@Model.Loc.Where(a => a.ResourceId == "spnVendorName").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="VendorName" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="VendorID" id="lblInactive" name="Inactive">@Model.Loc.Where(a => a.ResourceId == "spnVendorID").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="VendorID" autocomplete="off" style="color:#333;">
            </div>
        </form>
    </div>
</nav>
