@model Client.Models.Configuration.FleetServiceTask.ServiceTaskVM
<div id="fleetServiceTaskModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close ResetAllContent" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Model.Loc.Where(a => a.ResourceId == "spnAddServiceTask").FirstOrDefault().Value.ToString()</h4>
            </div>
            @Html.Partial("_ErrorDiv")
            @using (Ajax.BeginForm("AddNewServiceTask", "FleetServiceTask", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "FleetServiceTaskAddOnSuccess", OnBegin = "AjaxBeginFormBegin", OnComplete = "AjaxBeginFormComplete", OnFailure = "AjaxBeginFormFaillure" }, new { id = "frmrecordservicetask" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="form-group" style="margin-bottom:0;">
                        <div class="bottomBlock">
                            <div class="tabsArea nobg">
                                <ul class="listView nobrd" style="border-bottom:0;">
                                    <li>
                                        <span class="label" id="spnServiceTaskId">@Html.LabelFor(m => m.ServiceTaskModel.ClientLookupId) : <small>*</small></span>
                                        <span class="inputText">
                                            <div class="dropdown dropTableOuter">
                                                <div class="input-group">
                                                    @Html.ValidationMessageFor(m => m.ServiceTaskModel.ClientLookupId, "", new { style = "display:none" })
                                                    @Html.TextBoxFor(m => m.ServiceTaskModel.ClientLookupId, new { @class = "form-control search ", maxlength = "31", autocomplete = "off"})
                                                </div>
                                            </div>
                                        </span>
                                    </li>
                                    <li id="liDesc">
                                        <span class="label" id="spnDescription">@Html.LabelFor(m => m.ServiceTaskModel.Description) : <small>*</small></span>
                                        <span class="inputText">
                                            @Html.ValidationMessageFor(m => m.ServiceTaskModel.Description, "", new { style = "display:none" })
                                           @Html.TextAreaFor(m => m.ServiceTaskModel.Description, new { @class = "form-control search",  maxlength = "255", autocomplete = "off" })
                                            @*@Html.TextBoxFor(m => m.ServiceTaskModel.Description, new { @class = "form-control search ", maxlength = "255", autocomplete = "off"})*@
                                            <span id="spnMeter1dayDiff" style="color:red; position: relative;left: 200px;display:none;"></span>
                                        </span>
                                    </li>
                                </ul>
                            </div>
                            <div style="clear:both;"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="padding:15px 25px !important;">
                    <div class="idBttns">
                        <div class="bttn_pagin">
                            <div class="bttns2" style="margin:0;">
                                <button type="submit" class="btn btn-blue mobBttn" name="Command" id="btnSave" style="cursor:pointer" value="save"><i class="fa fa-save faIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalSave").FirstOrDefault().Value.ToString()</button>
                            </div>
                            <div class="bttns" style="margin:0;">
                                <button type="button" class="btn btn-blue mobBttn" id="btnServiceTaskcancel"><i class="fa fa-close faIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalCancel").FirstOrDefault().Value.ToString()</button>
                            </div>
                            <div style="clear:both;"></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
