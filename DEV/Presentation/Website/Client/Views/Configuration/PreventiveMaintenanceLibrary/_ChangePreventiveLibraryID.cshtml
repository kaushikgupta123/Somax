@model Client.Models.Configuration.PreventiveMaintenanceLibrary.PrevMaintLibraryVM
<!-- New Implement Modal Start -->
<div id="changePreventiveIDModalDetailsPage" class="modal fade" role="dialog" style="padding-right:0px !important;">
    <div class="modal-dialog modal-info">
        @using (Ajax.BeginForm("ChangePrevMaintLibID", "PreventiveMaintenanceLibrary", new AjaxOptions { HttpMethod = "Post", OnSuccess = "PrevMaintLibOnSuccess", OnBegin = "AjaxBeginFormBegin", OnComplete = "AjaxBeginFormComplete", OnFailure = "AjaxBeginFormFaillure" }))
        {
            @Html.AntiForgeryToken()
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">@Model.Loc.Where(a => a.ResourceId == "spnChangePreventiveLibraryId").FirstOrDefault().Value.ToString()</h4>
                </div>
                <div class="modal-body">
                    <ul class="listView">
                        <li style="border-bottom:0 !important; height:auto !important;">
                        <span class="label" >@Model.Loc.Where(a => a.ResourceId=="spnChangePreventiveLibraryId").FirstOrDefault().Value.ToString():<small></small>                                                       
                        </span>                            
                            <span class="inputText">
                                @Html.ValidationMessageFor(m => m.ChangePreventiveLibraryIDModel.ClientLookupId, "", new { style = "display:none", })
                                @Html.TextBoxFor(m => m.ChangePreventiveLibraryIDModel.ClientLookupId, new { @class = "form-control search", autocomplete = "off", id = "txtPreventiveId" })

                            </span>
                        </li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-blue mobBttn" style="float:left; margin:0 !important;" data-dismiss="modal"><i class="fa fa-close faIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalCancel").FirstOrDefault().Value.ToString()</button>
                    <button type="submit" class="btn btn-blue mobBttn" style="float:right; margin:0 !important;"><i class="fa fa-save faIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalSave").FirstOrDefault().Value.ToString()</button>
                    <div style="clear:both;"></div>
                </div>
            </div>
            @Html.HiddenFor(m => m.ChangePreventiveLibraryIDModel.ClientLookupId, new { id = "hiddenclientlookupid" })
            @Html.HiddenFor(m => m.ChangePreventiveLibraryIDModel.PrevMaintLibraryId, new { id = "hiddenprevmaintLibid" })
        }
    </div>
</div>
<!-- New Implement Modal End -->

<style type="text/css">
    .ui-tooltip { z-index:5 !important; }
    .errormessage { margin-bottom: 1px !important; }
    .modal-header, .modal .modal-content .modal-body {
        display: block;
        padding: 15px !important;
    }
    .modal .modal-content .modal-footer {
        display: block;
        padding: 15px !important;
    }
</style>


