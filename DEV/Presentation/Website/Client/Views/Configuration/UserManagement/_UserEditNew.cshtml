                        <option value="SingleSignOn">@Model.Loc.Where(a => a.ResourceId == "SingleSignOnSetting").FirstOrDefault().Value.ToString()</option>
                        <!--V2-803-->
                    </select>
                </div>
            </div>
        </div>

