@model Client.Models.Configuration.EquipmentMaster.EquipmentMasterVM

<nav id="sidebar">
    <div id="dismiss">
        <i class="fa fa-close"></i>
    </div>
    <div class="sidebar-header">
        <h3><i class="fa fa-filter" style="position: relative; top: -2px;"></i>&nbsp;@Model.Loc.Where(a => a.ResourceId == "spnFilters").FirstOrDefault().Value.ToString()<span class="filteritemcount" id="spnControlCounter">0</span></h3>
        <button type="button" class="btn btn-blue filterSearch" id="btnemAdvSrch"><i class="fa fa-search" style="margin-top:-3px;"></i>&nbsp;@Model.Loc.Where(a => a.ResourceId == "globalSearch").FirstOrDefault().Value.ToString()</button>
    </div>
    <div class="sidebar-content" id="advsearchsidebar">
        <form action="#" method="post">
            <div class="form-group">
                <label for="Name">@Model.Loc.Where(a => a.ResourceId == "spnName").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="Name" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="Make">@Model.Loc.Where(a => a.ResourceId == "spnMake").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="Make" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="Model" >@Model.Loc.Where(a => a.ResourceId == "spnModel").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="Model" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="Type">@Model.Loc.Where(a => a.ResourceId == "GlobalType").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="Type" autocomplete="off" style="color:#333;">
            </div>
        </form>
    </div>
</nav>
