@model Client.Models.MultiSitePartSearch.MultiSitePartSearchVM
<nav id="sidebar">
    <div id="dismiss">
        <i class="fa fa-close"></i>
    </div>
    <div class="sidebar-header">
        <h3><i class="fa fa-filter " style="position: relative; top: -2px;"></i>&nbsp;@Model.Loc.Where(a => a.ResourceId == "spnFilters").FirstOrDefault().Value.ToString()<span id="spnControlCounter" class="filteritemcount">0</span></h3>
        <button type="button" class="btn btn-blue filterSearch" id="btnMultiSitePartAdvSrch"><i class="fa fa-search" style="margin-top:-3px;"></i>&nbsp;@Model.Loc.Where(a => a.ResourceId == "globalSearch").FirstOrDefault().Value.ToString()</button>
    </div>
    <div class="sidebar-content" id="advsearchsidebar">
        <form action="#" method="post">
            <div class="form-group">
                <label for="ClientLookupId" >@Model.Loc.Where(a => a.ResourceId == "spnPartID").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="ClientLookupId" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="Description" >@Model.Loc.Where(a => a.ResourceId == "spnDescription").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="Description" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="Quantity" >@Model.Loc.Where(a => a.ResourceId == "spnQuantity").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item decimalinput" id="Quantity" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="Manufacturer">@Model.Loc.Where(a => a.ResourceId == "spnManufacturer").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="Manufacturer" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="ManufacturerId" >@Model.Loc.Where(a => a.ResourceId == "spnManufacturerID").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="ManufacturerId" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="City" >@Model.Loc.Where(a => a.ResourceId == "GlobalCity").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="City" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="State">@Model.Loc.Where(a => a.ResourceId == "GlobalState").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="State" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="Name" id="lblName" name="Name">@Model.Loc.Where(a => a.ResourceId == "spnSiteGlobal").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="Name" autocomplete="off" style="color:#333;">
            </div>
        </form>
    </div>
</nav>

