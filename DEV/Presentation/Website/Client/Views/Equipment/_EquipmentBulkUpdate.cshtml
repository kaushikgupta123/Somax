@model Client.Models.EquipmentCombined
<nav id="EqpBulksidebar" class="Bulksidebar">
    <div id="dismiss">
        <i class="fa fa-close"></i>
    </div>
    <div class="sidebar-header">
        <h3>@Model.Loc.Where(a => a.ResourceId == "globalBulkUpdate").FirstOrDefault().Value.ToString()</h3>
    </div>
    @Html.Partial("_ErrorDiv")
    @using (Ajax.BeginForm("EquipmentBulkUpdate", "Equipment", new AjaxOptions { HttpMethod = "Post", OnSuccess = "EqpBulkUploadOnSuccess", OnBegin = "AjaxBeginFormBegin", OnComplete = "AjaxBeginFormComplete", OnFailure = "AjaxBeginFormFaillure" }))
    {
        @Html.AntiForgeryToken()
<div class="sidebar-content">
    <div class="form-group">
        <label>@Model.Loc.Where(a => a.ResourceId == "GlobalType").FirstOrDefault().Value.ToString() :</label>
        @Html.DropDownListFor(m => m.equipmentBulkUpdateModel.Type, Model.equipmentBulkUpdateModel.LookupTypeList, "--Select--", new { @class = "form-control search select2picker", style = "width:100%;" })
    </div>
    <div class="form-group">
        <div class="form-group" style="margin-bottom:0;">

            <label>@Model.EquipModel.AssetGroup1Name</label>
            @Html.DropDownListFor(m => m.equipmentBulkUpdateModel.AssetGroup1Id, Model.EquipModel.AssetGroup1List, "--Select--", new { @class = "form-control search select2picker", style = "width:100%;" })
        </div>
    </div>
    <div class="form-group">

        <label>@Model.EquipModel.AssetGroup2Name</label>
        @Html.DropDownListFor(m => m.equipmentBulkUpdateModel.AssetGroup2Id, Model.EquipModel.AssetGroup2List, "--Select--", new { @class = "form-control search select2picker", style = "width:100%;" })
    </div>
    <div class="form-group">

        <label>@Model.EquipModel.AssetGroup3Name</label>
        @Html.DropDownListFor(m => m.equipmentBulkUpdateModel.AssetGroup3Id, Model.EquipModel.AssetGroup3List, "--Select--", new { @class = "form-control search select2picker", style = "width:100%;" })
    </div>
    <div class="form-group">
        <label>@Model.Loc.Where(a => a.ResourceId == "spnAccount").FirstOrDefault().Value.ToString() :</label>
        @Html.DropDownListFor(m => m.equipmentBulkUpdateModel.LaborAccountClientLookupId, Model.equipmentBulkUpdateModel.AccountList, "--Select--", new { @class = "form-control search select2picker", style = "width:100%;" })
    </div>
    <div class="form-group" >
        <label>@Model.Loc.Where(a => a.ResourceId == "spnLocation").FirstOrDefault().Value.ToString() :</label>
        @Html.TextBoxFor(m => m.equipmentBulkUpdateModel.Location, new { @class = "form-control search m-input", @style = "color:black", autocomplete = "off", maxlength = "63" })
    </div>
    @*V2-1158*@
    <div class="form-group">
        <label>@Model.Loc.Where(a => a.ResourceId == "spnMake").FirstOrDefault().Value.ToString() :</label>
        @Html.TextBoxFor(m => m.equipmentBulkUpdateModel.Make, new { @class = "form-control search m-input", @style = "color:black", autocomplete = "off", maxlength = "31" })
    </div>
    <div class="form-group" style="margin-bottom:0;">
        <label>@Model.Loc.Where(a => a.ResourceId == "spnModelNo").FirstOrDefault().Value.ToString() :</label>
        @Html.TextBoxFor(m => m.equipmentBulkUpdateModel.Model, new { @class = "form-control search m-input", @style = "color:black", autocomplete = "off", maxlength = "63" })
    </div>
</div>
        <div class="sidebar-header" style="border-top: 1px solid #b8c2c4; border-bottom: 0px solid #b8c2c4;">
            <button class="btn btn-blue mobBttn" style="float:right;" name="Command" value="save"><i class="fa fa-save faIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalSave").FirstOrDefault().Value.ToString()</button>
            <div style="clear:both;"></div>
        </div>
        @Html.HiddenFor(m => m.equipmentBulkUpdateModel.EquipmentIdList)
    }
</nav>
<style type="text/css">
    .errormessage { margin: 10px 20px; }
    .errormessage .alert { margin-bottom: 0px !important; }
</style>
