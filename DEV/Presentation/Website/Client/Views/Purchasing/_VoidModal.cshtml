@model Client.Models.PurchaseOrder.PurchaseOrderVM
<div id="voidModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-info">       
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Model.Loc.Where(a => a.ResourceId == "spnPoVoidReason").FirstOrDefault().Value.ToString()</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="Line" id="lblLine">@Model.Loc.Where(a => a.ResourceId == "spnPoVoidReason").FirstOrDefault().Value.ToString()<small>*</small></label>
                    @Html.DropDownListFor(m => m.PurchaseOrderModel.VoidReason, Model.PurchaseOrderModel.VoidReasonList, "--Select--", new { @class = "form-control search select2picker", id = "txtvoidreason", style = "width:100%;" })
                </div>
            </div>
            <div class="modal-footer" style="padding:15px 25px !important;">
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-close faIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalCancel").FirstOrDefault().Value.ToString()</button>
                <button type="button" class="btn btn-blue" style="float:right;" id="updatevoidlstatus"><i class="fa fa-check faIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "spnPoOk").FirstOrDefault().Value.ToString()</button>
                <div style="clear:both;"></div>
            </div>
        </div>
    </div>
</div>

