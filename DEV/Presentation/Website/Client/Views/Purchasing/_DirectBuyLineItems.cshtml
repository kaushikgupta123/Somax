        overflow-y:unset !important;
    }
    #purchaseOrderTreeModal > .modal-body {
        max-height: 580px;
        overflow-x: auto !important;
        overflow-y: auto !important;
    }

  
    .tooltip-box {
        position:relative;
    }
  
    #tblDirectBuyLineItem_wrapper {
        padding-top:20px;
    }

    #AddLineItems .modal-content {
