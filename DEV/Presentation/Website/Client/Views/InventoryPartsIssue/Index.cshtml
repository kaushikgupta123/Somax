
@model Client.Models.InventoryPartsIssue.InventoryPartsIssueVM
@{
    ViewBag.Title = "Somax | Part Issue";
}
@Styles.Render("~/Content/datatable")
<link href="~/Scripts/Metronic/assets/demo/default/base/GlobalSearchGrid.css" rel="stylesheet" />

@if (Model.userData.IsLoggedInFromMobile)
{
    <link rel="stylesheet" href="~/Scripts/mobile/css/mobiscroll.jquery.min.css">
    <link href="~/Scripts/mobile/css/mobile-style.css" rel="stylesheet" />

    @section scripts {
        @Scripts.Render("~/bundles/QRScanner")
        @Scripts.Render("~/bundles/datatable")
        @Scripts.Render("~/bundles/InventoryPartsIssueMobile")
        <script src="~/Scripts/treeTable.js"></script>
        <script type="text/javascript">
            com_github_culmat_jsTreeTable.register(this);
        </script>
        
    }
    @Html.Partial("Mobile/_IssueParts")
    @Html.Partial("Mobile/_EquipmentGridPopUp")
    @Html.Partial("Mobile/_WorkOrderGridPopUp")
    @Html.Partial("Mobile/_AddPartIdPopupSearchGrid")
    @Html.Partial("~/Views/InventoryPartsIssue/Mobile/_QrCodeReaderModal.cshtml")
}
else
{
    <link href="~/Scripts/Metronic/assets/demo/default/base/style_custom_tree.css" rel="stylesheet" />
    @section scripts {
        @Scripts.Render("~/bundles/QRScanner")
        @Scripts.Render("~/bundles/datatable")
        @Scripts.Render("~/bundles/InventoryPartsIssue")

        <script type="text/javascript">
            com_github_culmat_jsTreeTable.register(this);
        </script>
    }

    <div id="renderinventorycheckout">
        @Html.Partial("~/Views/InventoryPartsIssue/_IssueParts.cshtml")
    </div>
    @Html.Partial("~/Views/Shared/QR/_QrCodeReaderModal.cshtml")
}
