<div id="profileModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">My Profile</h4>
            </div>
            @Html.Partial("_ErrorDiv")
            @using (Ajax.BeginForm("UpdateUserProfile", "UserProfile", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "UpdateUserProfileOnSuccess", OnBegin = "AjaxBeginFormBegin", OnComplete = "AjaxBeginFormComplete", OnFailure = "AjaxBeginFormFaillure" }, new { id = "frmuserprofile" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="tab">
                        <button class="profile-tablinks active" type="button" onclick="ToogleUserProfileTab(event, 'EditLogin')" id="Editlogintabbutton"><i class="fa fa-user"></i> &nbsp;Edit Login</button>
                        <button class="profile-tablinks" type="button" onclick="ToogleUserProfileTab(event, 'UpdatePassword')" style="margin-right:0;" id="UpdatePasswordtabbutton"><i class="fa fa-shield"></i> &nbsp;Update Password</button>
                    </div>
                    <div id="EditLogin" class="profile-tabcontent" style="display:block;">
                        <div class="row">
                            <div class="col-lg-6">
                                <ul class="listView profileField">
                                    <li>
                                        <span class="label"><label>First Name <small>*</small></label></span>
                                        <span class="inputText">
                                            <span class="field-validation-valid" data-valmsg-for="UserProfileFirstName" data-valmsg-replace="true" style="display:none"></span>
                                            <input type="text" class="form-control search" name="UserProfileFirstName" id="UserProfileFirstName" autocomplete="off" data-val="true" data-val-required="Please enter first name.">
                                        </span>
                                    </li>
                                    <li>
                                        <span class="label"><label>Middle Name</label></span>
                                        <span class="inputText">
                                            <input type="text" class="form-control search" name="UserProfileMiddleName" id="UserProfileMiddleName" autocomplete="off">
                                        </span>
                                    </li>
                                    <li>
                                        <span class="label"><label>Last Name <small>*</small></label></span>
                                        <span class="inputText">
                                            <span class="field-validation-valid" data-valmsg-for="UserProfileLastName" data-valmsg-replace="true" style="display:none"></span>
                                            <input type="text" class="form-control search" name="UserProfileLastName" id="UserProfileLastName" autocomplete="off" data-val="true" data-val-required="Please enter last name.">
                                        </span>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-lg-6">
                                <ul class="listView profileField mobAdjust">
                                    <li>
                                        <span class="label"><label>Email</label></span>
                                        <span class="inputText">
                                            <span class="field-validation-valid" data-valmsg-for="UserProfileEmailAddress" data-valmsg-replace="true" style="display:none"></span>
                                            <input type="text" class="form-control search" name="UserProfileEmailAddress" id="UserProfileEmailAddress" data-val="true" data-val-email="Please enter valid email address.">
                                        </span>
                                    </li>
                                    <li>
                                        <span class="label"><label>Site</label></span>
                                        <span class="inputText"><input type="text" class="form-control search readonly" readonly="readonly" name="UserProfileSiteName" id="UserProfileSiteName"></span>
                                    </li>
                                </ul>
                            </div>
                            <div style="clear:both;"></div>
                        </div>
                    </div>

                    <div id="UpdatePassword" class="profile-tabcontent" style="display:none;">
                        <div class="row">
                            <div class="col-lg-6">
                                <ul class="listView profileField">
                                    <li>
                                        <span class="label"><label>Current Password</label></span>
                                        <span class="inputText">
                                            <span class="field-validation-valid" data-valmsg-for="UserProfileCurrentPassword" data-valmsg-replace="true" style="display:none"></span>
                                            @*<input type="password" class="form-control search" name="UserProfileCurrentPassword" autocomplete="off">*@
                                            <input type="password" class="form-control search" name="UserProfileCurrentPassword" autocomplete="off"
                                                   data-val="true"
                                                   data-val-requiredifvalueexist="Please enter current password"
                                                   data-val-requiredifvalueexist-dependentproperty="UserProfileNewPassword"
                                                   id="UserProfileCurrentPassword" />
                                        </span>
                                    </li>
                                    <li>
                                        <span class="label"><label>New Password</label></span>
                                        <span class="inputText">
                                            <span class="field-validation-valid" data-valmsg-for="UserProfileNewPassword" data-valmsg-replace="true" style="display:none"></span>
                                            @*<input type="password" class="form-control search" name="UserProfileNewPassword" autocomplete="off">*@
                                            <input autocomplete="off" class="form-control search" data-val="true"
                                                   data-val-minlengthpassword="Password should have a minimum of ({0}) characters"
                                                   data-val-minlengthpassword-passwordminlengthproperty="PasswordMinLength"
                                                   data-val-minlengthpassword-passwordreqminlengthproperty="PasswordReqMinLength"
                                                   data-val-norepeatedcharacters="Password should not contain 3 or more sequential repeated characters"
                                                   data-val-norepeatedcharacters-repeatedcharactersproperty="PasswordNoRepeatChar"
                                                   data-val-passwordnotequalusername="Password should not same as username"
                                                   data-val-passwordnotequalusername-passwordnotequalusernameproperty="PasswordNotEqualUserName"
                                                   data-val-passwordnotequalusername-usernameproperty="UserProfileUserName"
                                                   data-val-requirealphacharacter="Password should contain an alpha character"
                                                   data-val-requirealphacharacter-requirealphacharacterproperty="PasswordRequireAlpha"
                                                   data-val-requiremixedcasecharacter="Password should contain both upper and lower case alpha characters"
                                                   data-val-requiremixedcasecharacter-requiremixedcasecharacterproperty="PasswordRequireMixedCase"
                                                   data-val-requirenumber="Password should contain a number"
                                                   data-val-requirenumber-requirenumberproperty="PasswordRequireNumber"
                                                   data-val-requirespecialcasecharacter="Password should contain a special character from ~ ` ! @@ # $ % ^ & * ( ) + { } pipesymbol [ ] \\ : ; < > ? , . /"
                                                   data-val-requirespecialcasecharacter-requireppecialcasepharacterproperty="PasswordRequireSpecialChar"
                                                   id="UserProfileNewPassword" name="UserProfileNewPassword" type="password" />
                                        </span>
                                    </li>
                                    <li>
                                        <span class="label"><label>Confirm Password</label></span>
                                        <span class="inputText">
                                            <span class="field-validation-valid" data-valmsg-for="UserProfileConfirmPassword" data-valmsg-replace="true" style="display:none"></span>
                                            <input type="text" class="form-control search" autocomplete="off" name="UserProfileConfirmPassword" data-val="true" data-val-equalto="The passwords do not match" data-val-equalto-other="*.UserProfileNewPassword">
                                        </span>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-lg-6">
                                <ul class="listView profileField mobAdjust">
                                    <li>
                                        <span class="label"><label>Security Question <small>*</small></label></span>
                                        <span class="inputText">
                                            <span class="field-validation-valid" data-valmsg-for="UserProfileSecurityQuestion" data-valmsg-replace="true" style="display:none"></span>
                                            <input type="text" class="form-control search" autocomplete="off" name="UserProfileSecurityQuestion" id="UserProfileSecurityQuestion" data-val="true" data-val-required="Please enter security question.">
                                        </span>
                                    </li>
                                    <li>
                                        <span class="label"><label>Security Response <small>*</small></label></span>
                                        <span class="inputText">
                                            <span class="field-validation-valid" data-valmsg-for="UserProfileSecurityAnswer" data-valmsg-replace="true" style="display:none"></span>
                                            <input type="text" class="form-control search" autocomplete="off" name="UserProfileSecurityAnswer" id="UserProfileSecurityAnswer" data-val="true" data-val-required="Please enter security response.">
                                        </span>
                                    </li>
                                </ul>
                            </div>
                            <div style="clear:both;"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="bttns2" style="margin-top:0;">
                        <button type="submit" class="btn btn-blue mobBttn" id="btnUpdateUserProfile" style="cursor:pointer" value="save"><i class="fa fa-edit faIcon"></i> &nbsp; Update</button>
                    </div>
                    <div class="bttns" style="margin-top:0;">
                        <button type="button" class="btn btn-default mobBttn" data-dismiss="modal"><i class="fa fa-times faIcon"></i> &nbsp;Cancel</button>
                    </div>
                    <div style="clear:both;"></div>
                </div>
                <input type="hidden" name="UserInfoUpdateIndex" id="UserInfoUpdateIndex" />
                <input type="hidden" name="LoginInfoUpdateIndex" id="LoginInfoUpdateIndex" />
                //--------------Password setting fields-------
                <input type="hidden" name="PasswordReqMinLength" id="PasswordReqMinLength" />
                <input type="hidden" name="PasswordMinLength" id="PasswordMinLength" />
                <input type="hidden" name="PasswordRequireNumber" id="PasswordRequireNumber" />
                <input type="hidden" name="PasswordRequireAlpha" id="PasswordRequireAlpha" />
                <input type="hidden" name="PasswordRequireMixedCase" id="PasswordRequireMixedCase" />
                <input type="hidden" name="PasswordRequireSpecialChar" id="PasswordRequireSpecialChar" />
                <input type="hidden" name="PasswordNoRepeatChar" id="PasswordNoRepeatChar" />
                <input type="hidden" name="PasswordNotEqualUserName" id="PasswordNotEqualUserName" />
                <input type="hidden" name="UserProfileUserName" id="UserProfileUserName" />
                //---------------------------------------------
            }
        </div>
    </div>
</div>
<style type="text/css">
    #profileModal {
        padding-right: 0 !important;
    }

    #EditLogin, #UpdatePassword {
        background: rgb(233, 235, 238);
        padding: 0px 15px;
        margin-bottom: 10px;
        border: 1px solid rgb(38, 74, 124);
    }

    #profileModal .tab {
        border-bottom: none;
    }

        #profileModal .tab button {
            border-radius: 3px 3px 0 0;
            margin-bottom: 0px;
            border-bottom: 0;
        }

    #profileModal h4.modal-title {
        line-height: 32px;
    }

    #profileModal .modal-body {
        padding: 10px 25px 0px !important;
    }

    #profileModal .modal-footer {
        padding: 10px 25px !important;
    }

    #profileModal .modal-dialog {
        max-width: 850px;
    }

    ul.profileField {
        padding-top: 10px;
    }

        ul.profileField li {
            border: none;
            height: 35px;
            margin-bottom: 10px;
        }

            ul.profileField li span.label {
                height: 35px;
                line-height: 35px;
                width: 35%;
            }

            ul.profileField li span.inputText {
                width: 65%;
            }

    #profileModal .errormessage {
        margin: 10px 25px 1px !important;
    }

    #profileModal .alert.m-alert--outline.alert-danger {
        margin-bottom: 0 !important;
    }

    .ui-tooltip {
        z-index: 1151 !important;
    }
</style>