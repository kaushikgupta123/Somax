@model Client.Models.Account.ExternalLoginUnaothorizedModel
<!DOCTYPE html>
@{
    Layout = null;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Somax | Unauthorized</title>

    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <link rel="shortcut icon" href="~/Scripts/Metronic/assets/login/demo/default/media/img/logo/favicon.png" />
</head>
<body class="bodyBg">
    <div class="mailBox">
        <img src="~/Scripts/Metronic/assets/app/media/img/logos/somaxLogo.png" />
        <div class="blueBox">
            <h2 class="title">Try a different account</h2>
            <div style="float:left; padding:16px 0;">
                <h3 class="subTitle">Name : @Model.Name</h3>
                <h4 class="contentTitle">Email : @Model.Email</h4>
            </div>
            <div style="clear:both;"></div>
            <div class="msgText">
                <p><strong>@Model.Email</strong> @Model.ErrorMessage</p>
            </div>
            <button class="btn btn-focus" onclick="location.href='@Url.Action("SomaxLogIn", "Login")'">Log in to another account</button>
        </div>
    </div>
</body>
</html>
<link href="~/Content/ex-custom-styles.css" rel="stylesheet" />
<style type="text/css">
    .mailBox {
        width: 600px;
        height: 374px;
        position: absolute;
        left: 50%;
        margin-left: -300px;
        top: 50%;
        margin-top: -187px;
        text-align: center;
    }

        .mailBox img {
            margin-bottom: 20px;
        }

    .blueBox {
        background: #0c264a;
        border: 2px solid #fff;
        border-radius: 10px;
        padding: 30px;
    }

    h2.title {
        padding: 0 0 15px 0;
        font-size: 20px;
        font-weight: 500;
    }

    h3.subTitle {
        text-align: left;
        padding: 0 0 10px 0;
        margin: 0;
        font-size: 18px;
    }

    h4.contentTitle {
        text-align: left;
        padding: 0;
        margin: 0;
        font-size: 16px;
    }

    .msgText p {
        font-size: 14px;
        color: #fff;
        text-align: left;
        padding: 20px 0;
    }

    .btn {
        display: inline-block;
        font-weight: 400;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        user-select: none;
        border: 1px solid transparent;
        padding: 0.50rem 1rem;
        font-size: 1rem;
        line-height: 1.25;
        border-radius: 0.25rem;
        transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .btn-focus {
        color: #fff;
        background-color: #e64006;
        border-color: #e64006;
    }

    @@media screen and (max-width: 639px) {
        .mailBox {
            width: 550px;
            margin-left: -275px;
        }
    }

    @@media screen and (max-width: 567px) {
        .mailBox {
            width: 460px;
            margin-left: -230px;
        }
    }

    @@media screen and (max-width: 479px) {
        .mailBox {
            width: 390px;
            margin-left: -195px;
            height: 392px;
            margin-top: -196px;
        }
    }

    @@media screen and (max-width: 410px) {
        .mailBox {
            width: 300px;
            margin-left: -150px;
            height: 412px;
            margin-top: -206px;
        }
    }
</style>
