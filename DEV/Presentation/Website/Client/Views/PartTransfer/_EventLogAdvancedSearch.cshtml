@model Client.Models.PartTransfer.PartTransferVM

<nav class="sidebar">
    <div class="dismiss">
        <i class="fa fa-close"></i>
    </div>
    <div class="sidebar-header">
        <h3><i class="fa fa-filter" style="position: relative; top: -2px;"></i> @Model.Loc.Where(a => a.ResourceId == "spnFilters").FirstOrDefault().Value.ToString() <span class="filteritemcount">0</span></h3>
        <button type="button" id="btneventAdvSrch" class="btn btn-blue filterSearch"><i class="fa fa-search" style="margin-top:-3px;"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalSearch").FirstOrDefault().Value.ToString()</button>
    </div>
    <div class="sidebar-content" id="advsearchsidebarevent">
        <div class="form-group">
            <label for="ptEvent">@Model.Loc.Where(a => a.ResourceId == "spnEvent").FirstOrDefault().Value.ToString() :</label>
            <input type="text" class="form-control search adv-item" id="ptEvent" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="ptcreatedby">@Model.Loc.Where(a => a.ResourceId == "spnBy").FirstOrDefault().Value.ToString() :</label>
            <input type="text" class="form-control search adv-item" id="ptcreatedby" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="ptcreated">@Model.Loc.Where(a => a.ResourceId == "spnDateTime").FirstOrDefault().Value.ToString():</label>
            <input type="text" class="form-control search adv-item dtpicker" id="ptcreated" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="ptquantity">@Model.Loc.Where(a => a.ResourceId == "spnQuantity").FirstOrDefault().Value.ToString() :</label>
            <input type="text" class="form-control search adv-item decimalinput" id="ptquantity" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="ptcomments">@Model.Loc.Where(a => a.ResourceId == "spnLogComment").FirstOrDefault().Value.ToString() :</label>
            <input type="text" class="form-control search adv-item" id="ptcomments" autocomplete="off">
        </div>
    </div>
</nav>


