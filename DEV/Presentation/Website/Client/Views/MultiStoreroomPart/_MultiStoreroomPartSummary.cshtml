@model Client.Models.MultiStoreroomPart.MultiStoreroomPartVM
@{
    string imageUrl = Model.multiStoreroomSummaryModel.PartImageUrl;
    if (Model.multiStoreroomSummaryModel.ClientOnPremise)
    {
        imageUrl = UtilityFunction.PhotoBase64ImgSrc(Model.multiStoreroomSummaryModel.PartImageUrl);
    }

}

<div class="col-xl-12">
    <div class="m-portlet padAdjst" id="m_portlet">
        <div class="m-portlet__body  m-portlet__body--no-padding">
            <div class="row m-row--col-separator-xl">
                <div class="col-md-12">

                    <div class="m-portlet cardRow" style="margin-bottom:0; border:0;">
                        <div class="m-portlet__body" style="padding:0;">
                            <div class="row summaryview">
                                <div class="col-lg-2 col-md-2">
                                    <div class="gridImgBox" style="width:100%;">
                                        @if (!string.IsNullOrEmpty(imageUrl))
                                        {
                                            <img src="@imageUrl" id="EquipZoom" alt="Image" class="partImage" data-zoom-image="@imageUrl" />
                                        }
                                        else
                                        {
                                            <img src="~/Scripts/ImageZoom/images/NoImage.jpg" id="EquipZoom" class="partImage" alt="Image" data-zoom-image="/Scripts/ImageZoom/images/NoImage.jpg" />
                                        }
                                    </div>
                                    <div style="clear:both;"></div>
                                </div>
                                <div class="col-lg-5 col-md-5">
                                    <div class="newDescription" style='line-height:17px;'>
                                        <div class="search-box-wap">
                                            <p>
                                                @*V2-1070*@
                                                @*<span data-toggle="tooltip" title="@(Model.multiStoreroomSummaryModel.ClientLookupId)">@(String.IsNullOrEmpty(Model.multiStoreroomSummaryModel.ClientLookupId) ? "" : (Model.multiStoreroomSummaryModel.ClientLookupId.Length > 12 ? (Model.multiStoreroomSummaryModel.ClientLookupId.Substring(0, 12) + "...") : (Model.multiStoreroomSummaryModel.ClientLookupId)))</span>*@
                                                <span data-toggle="tooltip" title="@(Model.multiStoreroomSummaryModel.ClientLookupId)">@(Model.multiStoreroomSummaryModel.ClientLookupId)</span>

                                            </p>
                                            <button type="button" class="btn btn-blue filter-option filterSearch" id="btnMSPFind"><i class="fa fa-search" style="margin-top:-3px;"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "spnFind").FirstOrDefault().Value.ToString()</button>
                                        </div>

                                <p style="overflow: auto; max-height: 18px; padding: 0 !important; margin-bottom: 7px;">
                                            @if (!string.IsNullOrEmpty(Model.multiStoreroomSummaryModel.Description))
                                            {
                                                @*V2-1070*@
                                                @*if (Model.multiStoreroomSummaryModel.Description.Length > 12)
                                                    {
                                                        @Model.multiStoreroomSummaryModel.Description.Substring(0, 12) <span data-des="@Model.multiStoreroomSummaryModel.Description" style="color:#315a98;cursor:pointer" id="multistoreroompartmoreaddescription">... More</span>
                                                    }
                                                    else
                                                    {
                                                        @Model.multiStoreroomSummaryModel.Description
                                                    }*@
                                                @Model.multiStoreroomSummaryModel.Description
                                            }
                                        </p>
                                        <p>
                                            @Model.Loc.Where(a => a.ResourceId == "spnOnHand").FirstOrDefault().Value.ToString() :
                                            <span data-toggle="tooltip" title="@(String.Format("{0:n2}", Model.multiStoreroomSummaryModel.TotalOnHand))">@String.Format("{0:N2}", Model.multiStoreroomSummaryModel.TotalOnHand)</span>
                                        </p>
                                        <p>
                                            @Model.Loc.Where(a => a.ResourceId == "spnOnRequest").FirstOrDefault().Value.ToString() :
                                            <span data-toggle="tooltip" title="@(String.Format("{0:n2}", Model.multiStoreroomSummaryModel.TotalOnRequest))">@String.Format("{0:N2}", Model.multiStoreroomSummaryModel.TotalOnRequest)</span>
                                        </p>
                                        <p>
                                            @Model.Loc.Where(a => a.ResourceId == "spnOnOrder").FirstOrDefault().Value.ToString() :
                                            <span data-toggle="tooltip" title="@(String.Format("{0:n2}", Model.multiStoreroomSummaryModel.TotalOnOrder))">@String.Format("{0:N2}", Model.multiStoreroomSummaryModel.TotalOnOrder)</span>
                                        </p>

                                    </div>
                                </div>

                                <div class="col-lg-5 col-md-5">
                                    <div class="newDescription" style='line-height:17px;'>
                                        <p>
                                            @Model.Loc.Where(a => a.ResourceId == "spnStockType").FirstOrDefault().Value.ToString() :
                                            <span data-toggle="tooltip" title="@(Model.multiStoreroomSummaryModel.StockType)">@(Model.multiStoreroomSummaryModel.StockType)</span>
                                        </p>
                                        <p>
                                            Default Storeroom :
                                            <span data-toggle="tooltip" title="@(Model.multiStoreroomSummaryModel.DefaultStoreroom)">@(String.IsNullOrEmpty(Model.multiStoreroomSummaryModel.DefaultStoreroom) ? "" : (Model.multiStoreroomSummaryModel.DefaultStoreroom))</span>
                                        </p>
                                        <p>
                                            @Model.Loc.Where(a => a.ResourceId == "spnIssueUnit").FirstOrDefault().Value.ToString() :
                                            <span data-toggle="tooltip" title="@(Model.multiStoreroomSummaryModel.IssueUnit)">@(String.IsNullOrEmpty(Model.multiStoreroomSummaryModel.IssueUnit) ? "" : (Model.multiStoreroomSummaryModel.IssueUnit))</span>
                                        </p>
                                        <p>
                                            @Model.Loc.Where(a => a.ResourceId == "spnAppliedCost").FirstOrDefault().Value.ToString() :
                                            <span data-toggle="tooltip" title="@(String.Format("{0:n2}", Model.multiStoreroomSummaryModel.AppliedCost))">@String.Format("{0:N2}", Model.multiStoreroomSummaryModel.AppliedCost)</span>
                                        </p>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

<style>
    .introTags {
        left: 9px;
    }

    .search-box-wap {
        position: relative;
        display: inline-block;
        padding-right: 74px;
    }

        .search-box-wap p {
            display: inline-block;
            width: 100%;
            word-break: break-all;
            overflow: auto;
            max-height: 18px;
            padding: 0 !important;
            margin-bottom: 7px;
            margin:0;
        }

        .search-box-wap .filter-option.filterSearch {
            position: absolute;
            right: 0px;
            top: -4px;
            padding: 3px 7px;
        }

    .summaryview {
        padding: 11px 0px !important;
    }

@@media only screen and (max-width: 1366px){
    .filterDescription {
        word-break: break-all;
        line-height: normal;
        max-width: calc(100% - 250px) !important;
    }
}
    @@media only screen and (max-width:767px) {
        .filterDescription {
            max-width: calc(100% - 140px) !important;
        }

        .ActionBttnArea.ActionBttnArea {
            width: auto !important;
            margin-left:0;
        }
    }       

    @@media only screen and (max-width:420px) {
        .filterDescription {
            max-width: calc(100% - 0px) !important;
        }
    }
</style>
