@model Client.Models.AutoTRGenerationVM
@{
    var EmptyLookupList = new List<SelectListItem> { new SelectListItem { } };
}
@if (Convert.ToString(Session["MenuState"]) == "" || Convert.ToString(Session["MenuState"]) == "open")
{
    <div class="m-subheader fixedDiv1">
        <div class="new-m-subheader">
            <div class="PageTitle">
                <div class="align-items-center separator">
                    <h3 class="m-subheader__title ">
                        @Model.Loc.Where(a => a.ResourceId == "spnAutoTransferRequestGeneration").FirstOrDefault().Value.ToString()
                    </h3>
                </div>
            </div>
            <div class="NewBreadcrumbArea">
                <div class="newBreadcrumb">
                    <ul>
                        <li><a href="/Dashboard/Dashboard">&nbsp;</a></li>
                        <li class="active">@Model.Loc.Where(a => a.ResourceId == "spnAutoTransferRequestGeneration").FirstOrDefault().Value.ToString()</li>
                    </ul>
                    <div style="clear:both;"></div>
                </div>
            </div>
            <div style="clear:both;"></div>
        </div>
    </div>
}
else
{
    <div class="m-subheader fixedDiv1 fixupperpannel2">
        <div class="new-m-subheader">
            <div class="PageTitle">
                <div class="align-items-center separator">
                    <h3 class="m-subheader__title ">
                        @Model.Loc.Where(a => a.ResourceId == "spnAutoTransferRequestGeneration").FirstOrDefault().Value.ToString()
                    </h3>
                </div>
            </div>
            <div class="NewBreadcrumbArea">
                <div class="newBreadcrumb">
                    <ul>
                        <li><a href="/Dashboard/Dashboard">&nbsp;</a></li>
                        <li class="active">@Model.Loc.Where(a => a.ResourceId == "spnAutoTransferRequestGeneration").FirstOrDefault().Value.ToString()</li>
                    </ul>
                    <div style="clear:both;"></div>
                </div>
            </div>
            <div style="clear:both;"></div>
        </div>
    </div>
}
<div style="clear:both;"></div>
<div class="row" style="padding-top:60px;">
    <div class="col-xl-12">
        <div class="m-portlet newPort" id="m_portlet" style="padding:15px;">
            <div class="bottomBlock-wrap">
                <div class="bottomBlock-col">
                    <span class="label"><strong>@Model.Loc.Where(a => a.ResourceId == "spnStoreroom").FirstOrDefault().Value.ToString() : </strong></span>
        <span class="inputText">
            @Html.DropDownListFor(m => m.StoreroomIds, EmptyLookupList, "", new { @class = "form-control select2picker", style = "width:100%;" })
        </span>
                </div>
                <div class="bottomBlock-col">
                    <table>
                        <tr>
                            <td style="text-align:left">
                                <button type="button" class="btn btn-blue mobBttn" id="opengrid"> &nbsp; @Model.Loc.Where(a => a.ResourceId == "spnStoreroomLookup").FirstOrDefault().Value.ToString()</button>
                            </td>
                            <td style="text-align:right">
                                <button type="button" class="btn btn-blue mobBttn @(Model.IsMaintain==true ? "normal":"disabled")" id="btnStoreroomProcess"><i class="fa fa-check faIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "spnProcess").FirstOrDefault().Value.ToString()</button>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    #select2-StoreroomIds-results {
        display: none;
    }

    .bottomBlock-col:nth-child(1) .inputText {
        margin-left: 15px;
        width: calc(100% - 85px);
    }
</style>

