@model Client.Models.MasterSanitationSchedule.MasterScheduleVM

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<body style="padding:0; margin:0; font-family: 'Roboto', sans-serif; font-size:14px; color:#737272;">
    <table width="1000" border="0" cellspacing="0" cellpadding="0" align="center">
        <tr>
            <td align="left" valign="top" height="157">
                <table width="1000" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <td width="665" height="157" align="right" valign="top" style="padding:0;">
                            <img src='@Url.Content("~/Content/images/angleBg.jpg")' alt="" style="height:157px; width:108px;" />
                        </td>
                        <td width="310" height="132" align="left" valign="top" style="background:#e4effd; padding:25px 0 0 25px;">
                            <h2 style="padding:0; margin:0 0 10px 0; font-size:28px; color:#264a7c;font-weight:normal;">@Model.Loc.Where(a => a.ResourceId == "spnSanitationJob").FirstOrDefault().Value.ToString()</h2>
                            <p style="padding:0; margin:0 0 7px 0; font-size:18px; color:#5d5d5d; font-weight:normal;">@Model.Loc.Where(a => a.ResourceId == "globalCreateDate").FirstOrDefault().Value.ToString(): <span style="color:#ff8400;">@Model.JobDetailsModel.CreateDate.Value.ToString("MM/dd/yyyy", CultureInfo.InvariantCulture) </span></p>
                            <p style="padding:0; margin:0 0 7px 0; font-size:18px; color:#5d5d5d; font-weight:normal;">@Model.Loc.Where(a => a.ResourceId == "spnSanitationJob").FirstOrDefault().Value.ToString(): <span style="color:#ff8400;">@Model.JobDetailsModel.ClientLookupId</span></p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>

</html>

