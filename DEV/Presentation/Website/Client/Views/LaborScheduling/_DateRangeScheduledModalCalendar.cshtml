 @model Client.Models.NewLaborScheduling.NewLaborSchedulingVM
<div id="DateRangeScheduledModalcalendar" class="modal fade" role="dialog">
    <div class="modal-dialog modal-info">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close canceldtpicker" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Model.Loc.Where(a => a.ResourceId == "spnSelect").FirstOrDefault().Value.ToString()</h4>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label for="Line" id="lblLine">@Model.Loc.Where(a => a.ResourceId == "spnGlobalScheduled").FirstOrDefault().Value.ToString():</label>

                    <div style="padding:10px 0 0 10px; border-left: 1px dashed #b9c1c4;display:none;" class="scheduled-timeperiod" id="ScheduledDatetimeperiodcontainercalendar">
                        <label for="">@Model.Loc.Where(a => a.ResourceId == "spnGlobalTimePeriod").FirstOrDefault().Value.ToString() :</label>
                        <input type="text" class="form-control search dtrangepicker adv-item" id="advscheduledDatedaterangecalendar" autocomplete="off">
                    </div>
                </div>

            </div>
            <div class="modal-footer" style="padding:15px 25px !important;">
                <button type="button" class="btn btn-default canceldtpicker" data-dismiss="modal"><i class="fa fa-close buttonIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalCancel").FirstOrDefault().Value.ToString()</button>
                <button type="button" class="btn btn-blue" style="float:right;" id="btntimeperiod"><i class="fa fa-save buttonIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalOK").FirstOrDefault().Value.ToString()</button>
                <div style="clear:both;"></div>
            </div>
        </div>
    </div>
</div>

<style type="text/css">
    .modal-open { overflow: hidden !important; }
    .daterangepicker.drop-up { top: 190px !important; margin-top: 0 !important; }
    .daterangepicker.drop-up:before, .daterangepicker.drop-up:after { display:none !important; }
</style>