@model Client.Models.Work_Order.WorkOrderVM
@{
    var site = Model._userdata.Site;
    string AssetGroup1Name = String.IsNullOrEmpty(site.AssetGroup1Name) ? "Asset Group 1" : site.AssetGroup1Name;
    string AssetGroup2Name = String.IsNullOrEmpty(site.AssetGroup2Name) ? "Asset Group 2" : site.AssetGroup2Name;
    string AssetGroup3Name = String.IsNullOrEmpty(site.AssetGroup3Name) ? "Asset Group 3" : site.AssetGroup3Name;
}
<div id="EquipmentWOModal" class="modal fade dropdown-modal" role="dialog" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" id="btnEqChildrenClose">&times;</button>
                <h4 class="modal-title" id="popEquipmentWOTable">@Model.Loc.Where(a => a.ResourceId == "GlobalSelectEquipment").FirstOrDefault().Value.ToString()</h4>
            </div>
            <div class="modal-body">
                <div id="tbldropdown" class="dropdown-content tbl-dropdown" style="display:block;">
                    <div class="table-responsive dropTableOuter">
                        <table id="EquipmentWOTable" class="stripe dropTable globalDropTable" style="width:100%;">
                            <thead>
                                <tr>
                                    <th>@Model.Loc.Where(a => a.ResourceId == "spnGlobalEquipmentId").FirstOrDefault().Value.ToString()</th>
                                    <th>@Model.Loc.Where(a => a.ResourceId == "spnName").FirstOrDefault().Value.ToString()</th>
                                    <th>@Model.Loc.Where(a => a.ResourceId == "GlobalModel").FirstOrDefault().Value.ToString()</th>
                                    <th>@Model.Loc.Where(a => a.ResourceId == "GlobalType").FirstOrDefault().Value.ToString()</th>
                                    <th style="white-space: nowrap;">@AssetGroup1Name</th>
                                    <th style="white-space: nowrap;">@AssetGroup2Name</th>
                                    <th style="white-space: nowrap;">@AssetGroup3Name</th>
                                    <th>@Model.Loc.Where(a => a.ResourceId == "GlobalSerialNumber").FirstOrDefault().Value.ToString()</th>
                                </tr>
                            </thead>
                            <tfoot id="tblEquipmentWOfooter" style="display:none">
                                <tr>
                                    <th style="position:relative;">@Model.Loc.Where(a => a.ResourceId == "spnGlobalEquipmentId").FirstOrDefault().Value.ToString()Equipment ID</th>
                                    <th style="position:relative;">@Model.Loc.Where(a => a.ResourceId == "spnName").FirstOrDefault().Value.ToString()</th>
                                    <th style="position:relative;">@Model.Loc.Where(a => a.ResourceId == "GlobalModel").FirstOrDefault().Value.ToString()</th>
                                    <th style="position:relative;">@Model.Loc.Where(a => a.ResourceId == "GlobalType").FirstOrDefault().Value.ToString()</th>
                                    <th style="position:relative;">@AssetGroup1Name</th>
                                    <th style="position:relative;">@AssetGroup2Name</th>
                                    <th style="position: relative;">@AssetGroup3Name</th>
                                    <th style="position: relative;">@Model.Loc.Where(a => a.ResourceId == "GlobalSerialNumber").FirstOrDefault().Value.ToString()</th>

                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="padding:15px 25px !important;">
                <div style="clear:both;"></div>
            </div>
        </div>
    </div>
</div>

<style type="text/css">
    .dropdown-content {
        height: 438px !important;
    }

    .EquipmentPRPopup {
        overflow-x: auto;
    }

    .dropTableOuter table.dataTable thead .sorting_asc {
        background-image: url('/Scripts/Metronic/Images/upArrow1.png') !important;
    }

    .dropTableOuter table.dataTable thead .sorting_desc {
        background-image: url('/Scripts/Metronic/Images/downArrow1.png') !important;
    }

</style>