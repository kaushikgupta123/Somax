@model Client.Models.PreventiveMaintenance.PrevMaintVM
<div id="LocationPMModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-info">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Model.Loc.Where(a => a.ResourceId == "spnFilterByLoc").FirstOrDefault().Value.ToString()</h4>
            </div>
            @Html.Partial("_ErrorDiv")       
                <div class="modal-body">
                    <div class="form-group">
                        <label for="Line" id="lblLine">@Model.Loc.Where(a => a.ResourceId == "spnLocationID").FirstOrDefault().Value.ToString(): </label>
                        <span class="inputText">
                            <select id="prevMaintReassignModel_LocationId" style="width:100%;" class="form-control search adv-item select2picker"></select>
                        </span>
                    </div>
                </div>
                <div class="modal-footer" style="padding:15px 25px !important;">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-close faIcon"></i> &nbsp;@Model.Loc.Where(a => a.ResourceId == "globalCancel").FirstOrDefault().Value.ToString()</button>
                    <button type="button" class="btn btn-blue" style="float:right;" id="btnPMSFilterByLocation"><i class="fa fa-search faIcon"></i> &nbsp;@Model.Loc.Where(a => a.ResourceId == "globalSearch").FirstOrDefault().Value.ToString()</button>
                    <div style="clear:both;"></div>
                </div>      
        </div>
    </div>
</div>
<style type="text/css">
    .ui-tooltip { z-index: 1151 !important; }
    .errormessage { margin-bottom: 1px !important; }
</style>