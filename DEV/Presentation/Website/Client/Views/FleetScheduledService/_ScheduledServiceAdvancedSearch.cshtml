@model Client.Models.FleetScheduledService.FleetScheduledServiceVM
<nav id="sidebar">
    <div id="dismiss">
        <i class="fa fa-close"></i>
    </div>
    <div class="sidebar-header">
        <h3><i class="fa fa-filter" style="position: relative; top: -2px;"></i>&nbsp; @Model.Loc.Where(a => a.ResourceId == "globalFilter").FirstOrDefault().Value.ToString() <span id="spnControlCounter">0</span></h3>
        <button type="button" class="btn btn-blue filterSearch" id="btnScheduledServiceDataAdvSrch"> @Model.Loc.Where(a => a.ResourceId == "GlobalApply").FirstOrDefault().Value.ToString()</button>
    </div>
    <div class="sidebar-content" id="advsearchsidebar">
        <form action="#" method="post">
            <div class="form-group">
                <label for="EquipmentID" id="lblEquipmentID" name="EquipmentID">@Model.Loc.Where(a => a.ResourceId == "spnGlobalEquipmentId").FirstOrDefault().Value.ToString() </label>
                <input type="text" class="form-control search adv-item" id="EquipmentID" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="Name" id="lblName">@Model.Loc.Where(a => a.ResourceId == "spnGlobalAssetName").FirstOrDefault().Value.ToString() </label>
                <input type="text" class="form-control search adv-item" id="Name" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="ServiceTasksDesc" id="lblServiceTasksDesc">@Model.Loc.Where(a => a.ResourceId == "spnServiceTaskDesc").FirstOrDefault().Value.ToString() </label>
                <input type="text" class="form-control search adv-item" id="ServiceTasksDesc" autocomplete="off" style="color:#333;">
            </div>
        </form>
    </div>
</nav>
