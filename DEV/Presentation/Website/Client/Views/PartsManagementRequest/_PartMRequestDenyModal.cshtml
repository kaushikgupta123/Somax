@model Client.Models.PartsManagement.PartsManagementRequest.PartsManagementRequestVM
<div id="PartMRequestDenyModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-info">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Model.Loc.Where(a => a.ResourceId == "spnDenyPartMasterRequest").FirstOrDefault().Value.ToString()</h4>
            </div>

            @Html.Partial("_ErrorDiv")
            @using (Ajax.BeginForm("PartsManagementRequestDeny", "PartsManagementRequest", new AjaxOptions { HttpMethod = "Post", OnSuccess = "PartsManagementRequestDenyOnSuccess", OnBegin = "AjaxBeginFormBegin", OnComplete = "AjaxBeginFormComplete", OnFailure = "AjaxBeginFormFaillure" }))
            {
            @Html.AntiForgeryToken()
            <div class="modal-body">
                <div class="form-group">
                    <label for="Line" id="lblLine">@Model.Loc.Where(a => a.ResourceId == "spnDenyComments").FirstOrDefault().Value.ToString() : <small>*</small></label>
                    <span class="inputText">
                        @Html.ValidationMessageFor(m => m.partMRequestDenyModel.Comment, "", new { style = "display:none" })
                        @Html.TextAreaFor(m => m.partMRequestDenyModel.Comment, new { @class = "form-control search ", autocomplete = "off" })
                    </span>
                </div>
               
            </div>
            <div class="modal-footer" style="padding:15px 25px !important;">
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-close faIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalCancel").FirstOrDefault().Value.ToString()</button>
                <button type="submit" class="btn btn-blue" style="float:right;"><i class="fa fa-plus faIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalDeny").FirstOrDefault().Value.ToString()</button>
                <div style="clear:both;"></div>
            </div>
            @Html.HiddenFor(m => m.partMRequestDenyModel.PartMasterRequestId)
             @Html.HiddenFor(m => m.partMRequestDenyModel.RequestType)
            }
        </div>
    </div>
</div>


