@model Client.Models.PurchaseApproval.PurchaseApprovalVM
<div class="m-subheader">
    <div class="new-m-subheader">
        <div class="PageTitle">
            <div class="align-items-center separator">
                <h3 class="m-subheader__title ">
                    @Model.Loc.Where(a => a.ResourceId == "spnPurchaseApproval").FirstOrDefault().Value.ToString()
                </h3>
            </div>
        </div>

        <div class="NewBreadcrumbArea">
            <div class="newBreadcrumb">
                <ul>
                    <li><a href="/Dashboard/Dashboard">&nbsp;</a></li>
                    <li class="active">@Model.Loc.Where(a => a.ResourceId == "spnPurchaseApproval").FirstOrDefault().Value.ToString()</li>
                </ul>
                <div style="clear:both;"></div>
            </div>
        </div>
        <div style="clear:both;"></div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="m-portlet" id="m_portlet" style="padding:15px;">
            <div class="actionBar">
                <div class="pull-left">
                    <div class="ActionSearchDrop LoaderDrop">
                        @Html.DropDownListFor(m => m.purchaseApprovalModel.schStatusId, new SelectList(Model.purchaseApprovalModel.scheduleStatusList, "Value", "Text"), null, new { @class = "form-control search select2picker LoaderDrop", id = "schStatusId", style = "width:100%" })
                    </div>
                    <div class="ActionSearchDrop LoaderDrop">
                        @Html.DropDownListFor(m => m.purchaseApprovalModel.schCreateDateId, new SelectList(Model.purchaseApprovalModel.scheduleCreateDateList, "Value", "Text"), null, new { @class = "form-control search select2picker LoaderDrop", style = "width:100%" })
                    </div>
                    <button type="button" class="btn btn-white navbar-btn" id="sidebarCollapse" title="Advance Search"><i class="fa fa-filter" style="font-size: 1.3rem;"></i></button>
                    <ul class="filter_apply globalFilterAdjusted">
                        <li class="textFilter"><span class="spnControlCounter">0</span> @Model.Loc.Where(a => a.ResourceId == "globalFiltersAppiled").FirstOrDefault().Value.ToString()</li>
                        <li class="textClear" id="liclearadvsearch"><a href="javascript:void(0)">@Model.Loc.Where(a => a.ResourceId == "globalClear").FirstOrDefault().Value.ToString()</a></li>
                    </ul>
                    <div style="clear:both;"></div>
                </div>
                <div style="clear:both;"></div>
                <div id="dvFilterSearchSelect2" class="adv-search-container-for-multiple-dropdowns"></div>
                <div style="clear:both;"></div>
            </div>
            <div style="clear:both;"></div>


            <div id="Active" class="tabcontent" style="display:block;">
                <div class="table-responsive">
                    <table id="tbPurchaseApproval" class="eqpDtlTbl row-border custom-sort" style="width:100%;">
                        <thead>
                            <tr>
                                <th></th>
                                <th>
                                    <input name="select_all" value="1" id="SVsearchsSelectAll" type="checkbox" />
                                </th>
                                <th>@Model.Loc.Where(a => a.ResourceId == "spnPdRequest").FirstOrDefault().Value.ToString()</th>
                                <th>@Model.Loc.Where(a => a.ResourceId == "spnWrReason").FirstOrDefault().Value.ToString()</th>
                                <th>@Model.Loc.Where(a => a.ResourceId == "spnWrCreatedBy").FirstOrDefault().Value.ToString()</th>
                                <th>@Model.Loc.Where(a => a.ResourceId == "spnWrCreated").FirstOrDefault().Value.ToString()</th>
                                <th>@Model.Loc.Where(a => a.ResourceId == "globalBuyerReview").FirstOrDefault().Value.ToString()</th>
                                <th>@Model.Loc.Where(a => a.ResourceId == "spnWrVendor").FirstOrDefault().Value.ToString()</th>
                                <th>@Model.Loc.Where(a => a.ResourceId == "spnName").FirstOrDefault().Value.ToString()</th>
                                <th style="text-align:right !important;">@Model.Loc.Where(a => a.ResourceId == "spnPdTotalCost").FirstOrDefault().Value.ToString()</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
            <div class="idBttns">
                <div class="bttn_pagin">
                    <div class="bttns2">
                        <button type="button" class="btn btn-blue mobBttn" id="btnReturnToRequester"><i class="fa fa-exchange faIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "spnPdReturntoRequester").FirstOrDefault().Value.ToString()</button>
                        <button type="button" class="btn btn-blue mobBttn" id="btnDeny"><i class="fa fa-close faIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "spnPdDeny").FirstOrDefault().Value.ToString()</button>
                        <button type="button" class="btn btn-blue mobBttn" id="btnApprove"><i class="fa fa-check faIcon"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "spnPdApprove").FirstOrDefault().Value.ToString()</button>
                    </div>
                    <div style="clear:both;"></div>
                </div>
            </div>
            <div style="clear:both"></div>
        </div>
    </div>
</div>
@Html.HiddenFor(m => m.IncludePRReview)
@Html.HiddenFor(m => m.ShoppingCartIncludeBuyer)
@Html.Partial("_DenyModal")
<nav class="sidebar">
    <div id="dismiss">
        <i class="fa fa-close"></i>
    </div>
    <div class="sidebar-header">
        <h3><i class="fa fa-filter" style="position: relative; top: -2px;"></i> @Model.Loc.Where(a => a.ResourceId == "spnWrFilters").FirstOrDefault().Value.ToString() <span class="spnControlCounter">0</span></h3>
        <button type="button" class="btn btn-blue filterSearch" id="btnPurchaseApprovalAdvSrch"><i class="fa fa-search" style="margin-top:-3px;"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalSearch").FirstOrDefault().Value.ToString()</button>
    </div>
    <div class="sidebar-content" id="advsearchsidebar">
        <div class="form-group">
            <label for="adv-Request" id="lblRequest">@Model.Loc.Where(a => a.ResourceId == "spnPdRequest").FirstOrDefault().Value.ToString()</label>
