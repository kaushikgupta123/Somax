            <input type="text" class="form-control search adv-item" id="adv-VendorId" autocomplete="off" style="color:#333;">
        </div>
        <div class="form-group">
            <label for="adv-Name" id="lblName">@Model.Loc.Where(a => a.ResourceId == "spnName").FirstOrDefault().Value.ToString()</label>
            <input type="text" class="form-control search adv-item" id="adv-Name" autocomplete="off" style="color:#333;">
        </div>
        <div class="form-group">
            <label for="adv-Totalcost" id="lblTotalCost">@Model.Loc.Where(a => a.ResourceId == "spnPdTotalCost").FirstOrDefault().Value.ToString()</label>
            <input type="text" class="form-control search adv-item decimalinput" id="adv-Totalcost" autocomplete="off" style="color:#333;">
        </div>
    </div>
</nav>
