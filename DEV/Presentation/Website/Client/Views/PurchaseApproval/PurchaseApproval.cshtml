        </div>
        <div class="form-group">
            <label for="adv-Reason" id="lblReason">@Model.Loc.Where(a => a.ResourceId == "spnWrReason").FirstOrDefault().Value.ToString()</label>
            <input type="text" class="form-control search adv-item" id="adv-Reason" autocomplete="off" style="color:#333;">
        </div>
        <div class="form-group">
            <label for="adv-CreatedBy" id="lblCreatedBy">@Model.Loc.Where(a => a.ResourceId == "spnWrCreatedBy").FirstOrDefault().Value.ToString()</label>
            <input type="text" class="form-control search  adv-item" id="adv-CreatedBy" autocomplete="off" style="color:#333;">
        </div>
        <div class="form-group">
            <label for="adv-Created" id="lblCreated">@Model.Loc.Where(a => a.ResourceId == "spnWrCreated").FirstOrDefault().Value.ToString()</label>
            <input type="text" class="form-control search dtpicker adv-item" id="adv-Created" autocomplete="off" style="color:#333;">
        </div>
        <div class="form-group">
            <label for="adv-VendorId" id="lblVendorId">@Model.Loc.Where(a => a.ResourceId == "spnWrVendor").FirstOrDefault().Value.ToString()</label>
