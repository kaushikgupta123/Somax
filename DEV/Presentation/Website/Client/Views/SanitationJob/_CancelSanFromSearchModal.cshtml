@model Client.Models.Sanitation.SanitationVM

<div id="cancelModalSearchPage" class="modal fade" role="dialog">
    <div class="modal-dialog modal-info">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Model.Loc.Where(a => a.ResourceId == "spnCancelJob").FirstOrDefault().Value.ToString()</h4>
            </div>
            <form id = "frmcancelsanitation">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="Line" id="lblLine">@Model.Loc.Where(a => a.ResourceId == "spnCancelReason").FirstOrDefault().Value.ToString() :<small>*</small></label>
                        <span class="field-validation-valid" data-valmsg-for="sanitationCancelAndPrintListModel.CancelReason" data-valmsg-replace="true" style="display:none"></span>
                        <select id="txtCancelReasonSelect" style="width:100%;" class="form-control search select2picker" name="sanitationCancelAndPrintListModel.CancelReason" data-val="true" data-val-required="Please select cancel reason."></select>
                    </div>
                    <div class="form-group">
                        <label for="Line" id="lblLine">@Model.Loc.Where(a => a.ResourceId == "spnCancelComments").FirstOrDefault().Value.ToString() :</label>
                        <span class="field-validation-valid" data-valmsg-for="sanitationCancelAndPrintListModel.Comments" data-valmsg-replace="true" style="display:none"></span>
                        <textarea class="form-control search" id="txtcancelcomments" name="sanitationCancelAndPrintListModel.Comments"></textarea>
                    </div>
                </div>
                <div class="modal-footer" style="padding:15px 25px !important;">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-close faIcon"></i> &nbsp;@Model.Loc.Where(a => a.ResourceId == "globalCancel").FirstOrDefault().Value.ToString()</button>
                    <button type="button" class="btn btn-blue" style="float:right;" id="cancelSatinationsJob"><i class="fa fa-save faIcon"></i>&nbsp;@Model.Loc.Where(a => a.ResourceId == "globalSave").FirstOrDefault().Value.ToString()</button>
                    <div style="clear:both;"></div>
                </div>
            </form>
        </div>
    </div>
</div>
