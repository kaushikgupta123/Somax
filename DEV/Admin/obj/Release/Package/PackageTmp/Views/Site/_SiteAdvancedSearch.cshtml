@model Admin.Models.Site.SiteVM
<nav id="sidebar">
    <div id="dismiss">
        <i class="fa fa-close"></i>
    </div>
    <div class="sidebar-header">
        <h3><i class="fa fa-filter" style="position: relative; top: -2px;"></i>&nbsp; @Model.Loc.Where(a => a.ResourceId == "globalFilter").FirstOrDefault().Value.ToString() <span id="spnControlCounter">0</span></h3>
        <button type="button" class="btn btn-blue filterSearch" id="btnSiteDataAdvSrch"> @Model.Loc.Where(a => a.ResourceId == "GlobalApply").FirstOrDefault().Value.ToString()</button>
    </div>
    <div class="sidebar-content" id="advsearchsidebar">
        <form action="#" method="post">
            <div class="form-group">
                <label for="SiteID" id="lblSiteID" name="SiteID">@Model.Loc.Where(a => a.ResourceId == "spnSiteGlobal").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search integerinput adv-item" id="SiteID" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="Name" id="lblName">@Model.Loc.Where(a => a.ResourceId == "spnSiteNameGlobal").FirstOrDefault().Value.ToString() </label>
                <input type="text" class="form-control search adv-item" id="Name" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="AddressCity" id="lblAddressCity">@Model.Loc.Where(a => a.ResourceId == "GlobalCity").FirstOrDefault().Value.ToString() </label>
                <input type="text" class="form-control search adv-item" id="AddressCity" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="AddressState" id="lblAddressState">@Model.Loc.Where(a => a.ResourceId == "GlobalState").FirstOrDefault().Value.ToString()</label>
                <input type="text" class="form-control search adv-item" id="AddressState" autocomplete="off" style="color:#333;">
            </div>
        </form>
    </div>
</nav>


