@model  Admin.Models.Client.ClientVM
<nav id="sidebar">
    <div id="dismiss">
        <i class="fa fa-close"></i>
    </div>
    <div class="sidebar-header">
        <h3><i class="fa fa-filter" style="position: relative; top: -2px;"></i>&nbsp; @Model.Loc.Where(a => a.ResourceId == "globalFilter").FirstOrDefault().Value.ToString() <span id="spnControlCounter">0</span></h3>
        <button type="button" class="btn btn-blue filterSearch" id="btnClientDataAdvSrch"> @Model.Loc.Where(a => a.ResourceId == "GlobalApply").FirstOrDefault().Value.ToString()</button>
    </div>
    <div class="sidebar-content" id="advsearchsidebar">
        <form action="#" method="post">
            <div class="form-group">
                <label for="Name" id="lblName">@Model.Loc.Where(a => a.ResourceId == "spnName").FirstOrDefault().Value.ToString() </label>
                <input type="text" class="form-control search adv-item" id="Name" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="Contact" id="lblContact">@Model.Loc.Where(a => a.ResourceId == "spnContact").FirstOrDefault().Value.ToString() </label>
                <input type="text" class="form-control search adv-item" id="Contact" autocomplete="off" style="color:#333;">
            </div>
            <div class="form-group">
                <label for="ddlClientID" id="lblClientID" name="ClientID">@Model.Loc.Where(a => a.ResourceId == "GlobalClient").FirstOrDefault().Value.ToString() </label>
                @Html.DropDownListFor(m => m.ClientModel.ClientId, Model.ActiveClientList, "--Select--", new { @class = "form-control search adv-item select2picker", style = "width:100%;", id = "ddlClientID" })
            </div>
            <div class="form-group">
                <label for="ddlSiteId" id="lblSiteId">@Model.Loc.Where(a => a.ResourceId == "spnSiteGlobal").FirstOrDefault().Value.ToString()</label>
                @Html.DropDownListFor(m => m.SiteId, Model.ActiveSiteList, "--Select--", new { @class = "form-control search adv-item select2picker", style = "width:100%;", id = "ddlSiteId" })
            </div>
        </form>
    </div>
</nav>

