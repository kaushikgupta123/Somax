img { max-width:100%; height:auto !important; }

/*========== TimeOut ==========*/

.bodyBg
{
	background:#1a3965 url(images/bgTheme.png) no-repeat center center;
}

        .constructionBox {
            background: #0c264a;
            width: 50%;
            /*height:320px;*/
            height: 390px;
            border-radius: 10px;
            border: 2px solid #fff;
            position: absolute;
            left: 50%;
            top: 50%;
            margin-left: -25%;
            margin-top: -160px;
            text-align: center;
        }

.underConstructionIcon
{
	width:100px;
	height:100px;
	position:absolute;
	left:50%;
	top:-50px;
	margin-left:-50px;
}

h2.title {
    font-family: 'Roboto', sans-serif;
    padding: 85px 0 0 0;
    margin: 0;
    font-size: 45px;
    font-weight: 700;
    color: #fff;
}

h3.subTitle {
    font-family: 'Roboto', sans-serif;
    padding: 30px 0 0 0;
    margin: 0;
    font-size: 24px;
    font-weight: 400;
    color: #fff;
}

h4.contentTitle {
    font-family: 'Roboto', sans-serif;
    padding: 40px 0 40px 0;
    margin: 0;
    font-size: 20px;
    font-weight: 400;
    color: #fff;
}

.btnLogin
{
	border: 1px solid transparent;
	line-height: 1.25;
	transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
	color: #fff;
	background-color: #e64006;
	border-color: #e64006;
	box-shadow: none !important;
	font-size: 1rem;
	font-weight: 400;
	font-family: 'Roboto', sans-serif;
	text-align: center;
	padding: 1.2rem 3rem;
	cursor:pointer;
	border-radius: 60px;
}

.btnLogin:hover {
    color: #fff;
    background-color: #a72d03;
    border-color: #a72d03;
}

.constractionLogo {
    text-align: center;
    margin: 0 auto 6rem auto;
}

