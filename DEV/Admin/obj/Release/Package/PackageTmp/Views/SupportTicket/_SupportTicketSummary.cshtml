@model Admin.Models.SupportTicket.SupportTicketVM

<div class="col-xl-12">
    <div class="m-portlet padAdjst" id="m_portlet" style="padding:10px;">
        <div class="m-portlet__body  m-portlet__body--no-padding">
            <div class="row m-row--col-separator-xl">
                <div class="col-md-12">
                    <div class="m-portlet cardRow" style="margin-bottom:0; border:0;">
                        <div class="m-portlet__body gridList" style="padding:0;">
                            <div class="row summaryview">
                                <div class="col-lg-12 col-md-12">
                                    <button type="button" class="btn btn-blue" id="btnAddReply"><i class="fa fa-reply" style="margin-top:-3px;"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "spnReply").FirstOrDefault().Value.ToString()</button>
                                    <button type="button" class="btn btn-blue" id="btnAddNote"><i class="fa fa-sticky-note" style="margin-top:-3px;"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "spnGlobalNote").FirstOrDefault().Value.ToString()</button>
                                    <button type="button" class="btn btn-blue AddSupportTicket" id="btnAdd"><i class="fa fa-plus" style="margin-top:-3px;"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalAdd").FirstOrDefault().Value.ToString()</button>
                                    <button type="button" class="btn btn-blue" id="btnSTEdit"><i class="fa fa-pencil" style="margin-top:-3px;"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalEdit").FirstOrDefault().Value.ToString()</button>
                                    <button type="button" class="btn btn-blue" id="btnHold"><i class="far fa-hand-rock" style="margin-top:-3px;"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "spnHold").FirstOrDefault().Value.ToString()</button>
                                    <button type="button" class="btn btn-blue" id="btnComplete"><i class="fa fa-check faIcon" style="margin-top:-3px;"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "GlobalComplete").FirstOrDefault().Value.ToString()</button>
                                    <button type="button" class="btn btn-blue" id="btnSTCancel"><i class="fa fa-close faIcon" style="margin-top:-3px;"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalCancel").FirstOrDefault().Value.ToString()</button>
                                    @if (Model.SupportTicketModel.Status == STStatusConstants.Cancel || Model.SupportTicketModel.Status == STStatusConstants.Complete)
                                    {
                                        <button type="button" class="btn btn-blue" id="btnReopen"><i class="fa fa-envelope-open" style="margin-top:-3px;"></i> &nbsp; @Model.Loc.Where(a => a.ResourceId == "globalReopen").FirstOrDefault().Value.ToString()</button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
