@model Admin.Models.UserInfoDetails

<div class="m-login__forget-password">
    @*<div class="lockIcon"><img src="~/Scripts/Metronic/assets/app/media/img/logos/forgotIcon.png" /></div>*@
    <div class="lockIcon">
        @*<img src="~/Scripts/img/forgotIcon.png" />*@
        <img src="~/Content/Images/forgotIcon.png" />
    </div>
    <div class="m-login__head">
        <h3 class="m-login__title forgot">
            @Model.localization.Where(t => t.ResourceId == "m_login_forget_password").FirstOrDefault().Value ?
        </h3>
        <div class="m-login__desc">
            What can we help you with?
        </div>
    </div>
    <form class="m-login__form m-form" action="">
        <label class="m-radio m-radio--success" id="radioUserID" onclick="show1();">
            <input type="radio" name="example_2" value="1">I forgot my User ID
            <span></span>
        </label>

        <label class="m-radio m-radio--success" id="radioPassword" onclick="show2();">
            <input type="radio" name="example_2" value="1">	I forgot my password
            <span></span>
        </label>

        <div id="divUserID" class="hide">
            <h3 class="titleForgot">Forgot your User ID? Let's look it up with your email address.</h3>
            <p class="subTitleForgot">We'll email your User ID to you with a link to sign in.</p>
            <div class="form-group m-form__group">
                <input class="form-control m-input" type="text" placeholder='@Model.localization.Where(t => t.ResourceId == "m_email").FirstOrDefault().Value' name="email" id="m_email" autocomplete="off">
            </div>
            <div id="error_UserNameEMail" class="ul-login-error-lst text-danger errMsg"></div>

            <div class="m-login__form-action" style="margin-bottom:0;">
                <button id="m_login_forget_password_submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air">
                    @Model.localization.Where(t => t.ResourceId == "forget_password_submit").FirstOrDefault().Value
                </button>
                <button id="m_login_forget_password_cancel" class="btn btn-outline-focus m-btn m-btn--pill m-btn--custom">Cancel</button>
            </div>
        </div>

        <div id="divPassword" class="hide">
            <h3 class="titleForgot">Forgot your password? Enter your User ID and we'll email you a link to change your password.</h3>
            <div class="form-group m-form__group">
                <input class="form-control m-input" type="text" placeholder='@Model.localization.Where(t => t.ResourceId == "m_user").FirstOrDefault().Value' name="user" id="m_user" autocomplete="off">
            </div>

            <div id="error_UserIdEMail" class="ul-login-error-lst text-danger errMsg"></div>

            <div class="m-login__form-action" style="margin-bottom:0;">
                <button id="m_login_forget_password_submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air">
                    @Model.localization.Where(t => t.ResourceId == "forget_password_submit").FirstOrDefault().Value
                </button>
                <button id="m_login_forget_password_cancel" class="btn btn-outline-focus m-btn m-btn--pill m-btn--custom">Cancel</button>
            </div>
        </div>

        <div class="m-login__form-action" style="margin-bottom:0;" id="divCancelBtn">
            <button id="m_login_forget_password_cancel" class="btn btn-outline-focus m-btn m-btn--pill m-btn--custom">Cancel</button>
        </div>

    </form>
</div>

<style type="text/css">
    .hide { display: none; }
    .m-radio { color: #ffffff; margin: 0 20px; }
    .m-radio.m-radio--success > span { border: 1px solid #ffffff; }
    .m-radio.m-radio--success > input:checked ~ span { border: 1px solid #0d213e; }
    .m-radio.m-radio--success > span:after { border: solid #0d213e; background: #0d213e; }
    h3.titleForgot { margin-top: 1.5rem; text-align: center; font-size: 14px; color: #fff; font-weight: 300; }
    p.subTitleForgot { margin-top: 1rem; text-align: center; font-size: 12px; color: #fff; font-weight: 300; }
    #error_UserIdEMail, #error_UserNameEMail { padding: 0px; text-align: center; font-weight: 500; background: #ffffff; margin: 10px 0; }
    .btn-focus { color: #fff; background-color: #1a3965 !important; border-color: #1a3965 !important; }
    @@media (max-width: 767px) {
        .m-login.m-login--1.m-login--forget-password .m-login__forget-password { padding: 60px 40px; }
        .m-login.m-login--1 .m-login__wrapper { padding: 2rem 0; }
    }
    @@media (max-width: 567px) {
        .m-radio { margin: 0 20px 10px; }
    }
    @@media (max-width: 479px) {
        h3.forgot { font-size: 36px !important; }
        .m-login.m-login--1 .m-login__wrapper .m-login__form .m-login__form-action .btn { margin-bottom:10px; }
    }
    @@media (max-width: 361px) {
        .m-radio { margin: 0 0 10px; }
    }
</style>